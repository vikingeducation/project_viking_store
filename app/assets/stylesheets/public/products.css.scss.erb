/* header */

.header-wrapper {
  text-align: center;
}

.main-title {
  background: -webkit-linear-gradient(rgba(255,255,255,0.9),rgba(255,255,255,0.9)),
  url(<%= asset_path 'viking_ship_background_medium.jpg'%>);
  background: -moz-linear-gradient(rgba(255,255,255,0.9),rgba(255,255,255,0.9)),
  url(<%= asset_path 'viking_ship_background_medium.jpg'%>);
  background: linear-gradient(rgba(255,255,255,0.9),rgba(255,255,255,0.9)),
  url(<%= asset_path 'viking_ship_background_medium.jpg'%>);
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  
  height: 300px;
  h1 {
    line-height: 300px;
    margin: 0px;
  }
}

.sub-title {
  background-color: #303030;
  color: #fff;
  height: 100px;
  h2 {
    line-height: 100px;
    margin: 0px;
  }
}

.catalog-header {
  height: 75px;
  line-height: 75px;
  font-size: 24px;
  font-style: italic;
  border-bottom: 1px solid #ddd;
}

.product-container {
  text-align: center;
  margin-top: 10px;
  margin-bottom: 10px;
  border: 2px solid #000;
  h3 {
    color: #fff;
    font-weight: 700px;
    font-size: 22px;
  }
  img {
    height: 190px;
    max-width: 100%;
  }
  .img-container {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #fff;
  }
  .price {
    position: absolute;
    right: 0;
    top: 0;
    padding: 4px 10px;
    border-left: 2px solid #000;
    border-bottom: 2px solid #000;
    color: #555;
    background-color: white;
  }
  .banner-box {
    background-color: #303030;
    height: 50px;
    line-height: 50px;
    h3 {
      line-height: inherit;
      margin: 0px;
    }
    .btn {
      font-weight: bold;
    }
  }
}

.category-filter {
  margin-top: 15px;
  margin-bottom: 5px;
}


