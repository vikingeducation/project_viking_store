<section id='address-index'>

  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <h1 class='text-center'>
        <%= "#{@filtered_user.first_name} #{@filtered_user.last_name}'s " if @filtered_user %>Addresses
      </h1>

      <%= create_from_index(@filtered_user) %>

    </div>
  </div>


  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <table class='table table-striped table-bordered'>

        <thead class='bg-primary'>
          <tr>
            <td>ID</td>
            <td>User</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Orders</td>
            <td>Created</td>
            <td>SHOW</td>
            <td>EDIT</td>
            <td>DELETE</td>
          </tr>
        </thead>

        <tbody>
          <%= render :partial => 'address', :collection => @addresses %>
        </tbody>


      </table>

    </div>
  </div>

</section>