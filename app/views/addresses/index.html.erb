<h2 class="text-center">Addresses</h2><br />
<%= render "shared/left_nav" %>
<div class="col-md-8">
  <%= link_to "Add New Address", "#", class: "btn btn-primary btn-block" %><br />
  <table class="table">
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Orders</th>
      <th>Created</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.id %></td>
      <td><%= address.user.first_name %></td>
      <td><%= address.street_address %></td>
      <td><%= address.city.name %></td>
      <td><%= address.state.name %></td>
      <td><%= address.user.orders.count %></td>
      <td><%= address.created_at.strftime('%v') %></td>
      <td><%= link_to "Show", address_path(address)%></td>
      <td><%= link_to "Edit", edit_address_path(address)%></td>
      <td><%= link_to "Delete", address, method: :delete, data: {confirm: "Are you sure?"}%></td>

    </tr>
    <% end %>
  </table>
</div>
