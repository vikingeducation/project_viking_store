<h1>Addresses</h1>
<h3>Create new addresses from within <%= link_to "users", users_path %> profile</h3>

<table class="table table-striped">
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Orders</th>
    <th>Created</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.id %></td>
    <td><%= link_to address.user.full_name, user_path(address.user.id) %></td>
    <td><%= address.street_address %></td>
    <td><%= address.city.name %></td>
    <td><%= address.state.name %></td>
    <td><%= address.orders.count %></td>
    <td><%= address.created_at.strftime("%d %b %Y") %></td>
    <td><%= link_to "Show", address_path(address.id) %></td>
    <td><%= link_to "Edit", "#" %></td>
    <td><%= link_to "Delete", "#" %></td>
  </tr>
  <% end %>
</table>