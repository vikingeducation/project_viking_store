<div class="row">
  <div class="col">
    <h2 class="text-center">Create <%= "#{@user.first_name} #{@user.last_name}'s"%> Address<h2>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-11 border mt-2 mb-4">

    <div class="row mt-2">
      <div class="col-3">
        <span class="font-weight-bold">Owner ID:</span>
      </div>
      <div class="col">
        <%= @user.id %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <span class="font-weight-bold">Owner Name:</span>
      </div>
      <div class="col">
        <%= link_to "#{@user.first_name} #{@user.last_name} (click to view User)", user_path(@user) %>
      </div>
    </div>

    <!-- form -->
    <div class="row mt-4">
      <div class="col">

        <%= form_for [@user, @address] do |f| %>

          <div class="form-group form-row">
            <div class="col-3">
              <%= f.label :street_address, "Street Address", class: "col-form-label font-weight-bold" %>
            </div>
            <div class="col">
              <div class="row">
                <div class="col">
                  <%= field_with_errors(@address, :street_address) %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= f.text_field :street_address, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group form-row">
            <div class="col-3">
              <%= f.label :city_id, "City", class: "col-form-label font-weight-bold" %>
            </div>
            <div class="col">
              <div class="row">
                <div class="col">
                  <%= field_with_errors(@address, :city_id) %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= f.text_field :city_id, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group form-row">
            <div class="col-3">
              <%= f.label :state_id, "State", class: "col-form-label font-weight-bold" %>
            </div>
            <div class="col">
              <%= f.collection_select :state_id, State.all, :id, :name, { prompt: "Select a State" }, { class: "form-control" } %>
            </div>
          </div>

          <div class="form-group form-row">
            <div class="col-3">
              <%= f.label :zip_code, "Zip", class: "col-form-label font-weight-bold" %>
            </div>
            <div class="col">
              <%= f.text_field :zip_code, class: "form-control" %>
            </div>
          </div>

          <div class="form-group form-row">
            <div class="col">
              <%= f.submit "Create Address", class: "btn btn-primary btn-lg btn-block border rounded mt-4 mb-2" %>
            </div>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
