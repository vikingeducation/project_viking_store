<%= render partial: 'shared/admin_header' %>
<div class="container">

  <div class="row">
    <%= render partial: 'shared/nav' %>

    <article class="col-sm-9">
      <h2 class="text-center">Edit <%= full_name(@address.user) %>'s Address </h2>
      <br>
      <section class="col-sm-10 col-sm-offset-1">
        <%= render partial: 'form', locals: { user: @user, address: @address, states: @states, cities: @cities } %>
        <h5 class="text-center">
          <%= link_to 'Delete Address', @address, method: 'delete', data: { confirm: 'Are you sure?' } %>
        </h5>
      </section>

    </article>

  </div>
</div>

