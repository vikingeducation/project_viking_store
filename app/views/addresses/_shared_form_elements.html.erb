<div class="form-group form-row">
  <div class="col-3">
    <%= f.label :street_address, "Street Address", class: "col-form-label font-weight-bold" %>
  </div>
  <div class="col">
    <div class="row">
      <div class="col">
        <%= field_with_errors(@address, :street_address) %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.text_field :street_address, class: "form-control" %>
      </div>
    </div>
  </div>
</div>

<div class="form-group form-row">
  <div class="col-3">
    <%= f.label :city_id, "City", class: "col-form-label font-weight-bold" %>
  </div>
  <div class="col">
    <div class="row">
      <div class="col">
        <%= field_with_errors(@address, :city_id) %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.text_field :city_id, class: "form-control" %>
      </div>
    </div>
  </div>
</div>

<div class="form-group form-row">
  <div class="col-3">
    <%= f.label :state_id, "State", class: "col-form-label font-weight-bold" %>
  </div>
  <div class="col">
    <%= f.collection_select :state_id, State.all, :id, :name, { prompt: "Select a State" }, { class: "form-control" } %>
  </div>
</div>

<div class="form-group form-row">
  <div class="col-3">
    <%= f.label :zip_code, "Zip", class: "col-form-label font-weight-bold" %>
  </div>
  <div class="col">
    <%= f.text_field :zip_code, class: "form-control" %>
  </div>
</div>
