<tr>
  <td><%= address[:relation].id %></td>
  <td><%= link_to "#{address[:user].first_name} #{address[:user].last_name}", user_path(address[:user].id) %></td>
  <td><%= address[:relation].street_address %></td>
  <td><%= address[:city_name] %></td>
  <td><%= address[:state_name] %></td>
  <td><%= address[:order_count] %></td>
  <td><%= address[:relation].created_at.to_date %></td>
  <td><%= link_to 'show', address_path(address[:relation].id) %></td>
  <td><%= link_to 'edit', edit_address_path(address[:relation].id) %></td>
  <td><%= link_to 'delete', address_path(address[:relation].id),
            :method => :delete,
            :data => { :confirm => 'Delete address?' } %></td>
</tr>