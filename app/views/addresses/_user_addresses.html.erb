<div class = "row">
  <div class = "col-md-12">
    <h2><%= "#{name(@user)}'s Addresses" %></h2>
    <%= link_to "Create #{name(@user)}'s Address", new_user_address_path(@user),
      class: "btn btn-primary btn-lg btn-block btn-create"%>
  </div>
</div>

<div class = "row">
  <div class = "col-md-12">
    <table class = "table table-striped table-bordered">
      <%= render "address_thead" %>
      <%= render "user_addresses_tbody" %>
    </table>
  </div>
</div