<div id="store">
<!--  ======================Products============================ -->
<header class = "container-fluid">
  <h1>The Viking Store</h1>
  <%# image_tag "http://s3.amazonaws.com/viking_education/demos/viking_store_app/viking_ship_background_medium.jpg", class: "img-responsive" %>
</header>
<div class="heading1">
  <h2>The Best Viking Gear on the Whole Web</h2>
</div>
<div class="sub-heading">
  <h3>Choose from among our lineup of products below</h3>
</div>
  <div class="container">

    <div class="row">
      <div class="col-xs-12">
        <ul class="nav navbar-nav pull-right">
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <% @categories.each do |cat| %>
                  <li> <%= link_to cat.name, home_path(:cat_id => cat.id) %> </li>

                  <% end %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
    <div class="store-frame">
      <div class="product-wrapper row">
        <div class="text-center">
         <%= will_paginate @products %>
        </div>
        <% @products.each do |product| %>
          

          <div class="col-md-4 text-center">
            <div class="title">
              <h4><%= product.name %></h4>
            </div>
            <div class="pimg">
              <div class="price"><%= product.price %></div>
              <%= image_tag "https://s3.amazonaws.com/viking_education/demos/viking_store_app/axe_silent_night_small.jpg", class: "img-responsive img-thumbnail", style: "height:150px;width:150px" %>
            </div>

            <div class="row">
              <div class="col-xs-12">
                <br>
                <%= link_to "Add to Cart", add_to_cart_path( {product_id: product.id } ), class: 'btn btn-lg btn-success' %>
              </div>
            </div>

          </div>
          <% end %>
          <div class="text-center">
           <%= will_paginate @products %>
          </div>

      </div>
    </div>
  </div>
</div>