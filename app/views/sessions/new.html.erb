<div class='container'>

  <div class='row'>
    <div class='col-xs-12'>
      <h1 class='text-center'>Sign Up or Sign In</h1>
    </div>
  </div>

  <div class='row'>

    <div class='col-md-6'>

      <h3 class='text-center'>I do NOT have an account</h3>

      <div class= 'panel panel-default'>
        <div class='panel-body text-center'>
          <%= link_to "Sign Up", new_user_path, class: 'btn btn-success btn-lg' %>
        </div>
      </div> <!-- panel -->

    </div>

    <div class='col-md-6'>

      <h3 class='text-center'>I have an account</h3>

      <div class= 'panel panel-default'>
        <div class='panel-body'>

          <%= form_tag '/session' do %>

            <div class='form-group'>
              <%= label_tag :email, 'Email Address' %>
              <%= text_field_tag :email, nil, class: 'form-control' %>
            </div>

            <div class='form-group'>
              <%= label_tag :password %>
              <%= password_field_tag :password, nil, class: 'form-control' %>
            </div>

            <div class='text-center'>
              <%= submit_tag "Sign In", class: 'btn btn-success btn-lg' %>
            </div>

          <% end %>

        </div>
      </div> <!-- panel -->

    </div>
  </div>

</div> <!-- container -->