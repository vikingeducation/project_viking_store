<%= content_for :content do %>

  <div class="container">
    <div class="row">
      <h1 class="text-center">Sign Up or Sign In</h2>
      <div class="col-md-4 col-md-offset-2">
        <h2 class="text-center">I don't have an account...</h2>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= form_for :user, html: { method: 'GET' }, url: new_user_path do |f| %>
              <div class="form-group">
                <%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <h2 class="text-center">I have an account...</h2>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= form_for :session do |f| %>
              <div class="form-group">
                <%= f.label "Email" %>
                <%= f.email_field :email, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label "Password" %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.submit "Sign In", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>

<%= render template: "layouts/public" %>
