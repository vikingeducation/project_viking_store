<%= form_for :session, url: '/session' do |f| %>

<%= f.label 'Email', class: 'form-control' %>
<%= f.email_field :email, class: 'form-control' %>

<%= f.submit class: 'btn btn-lg btn-primary btn-block' %>

<% end %>

