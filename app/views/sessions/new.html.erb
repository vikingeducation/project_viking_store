<div class = "row heading">
  <div class = "col-md-12">
    <h1>Sign Up Or Sign In</h1>
  </div>
</div>

<div class = "row sign-in">
  <div class = "col-md-5">
    <%= link_to "Sign Up", "#", class: "btn btn-primary btn-lg btn-block btn-create" %>
  </div>

  <div class = "col-md-5 col-md-offset-2">
    <%= form_tag sessions_path, method: "post" do %>
      <%= text_field_tag :email, nil, placeholder: "Enter your email", class: "form-control" %>
      <%= text_field_tag :password, nil, placeholder: "Enter your password", class: "form-control" %>
      <%= submit_tag "Sign In", class: "btn btn-primary btn-lg btn-block btn-create" %>
    <% end %>

  </div>

</div>






<%= link_to "Sign Out", sessions_path, method: "DELETE" %>