<div class="row">
  <div class="col-sm-4 col-sm-offset-4">

    <%= form_for :session, url: '/session' do |f| %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <%= f.submit "Sign In", class: 'btn btn-lg btn-primary btn-block' %>

    <% end %>
  </div>
</div>
