<div>

  <h1 class="text-center">Sign Up or Sign In</h1>
  <div class="row">

    <div class="col-sm-5 well col-sm-offset-1">
      <p>I do NOT have an account...</p>
      <%= button_to "Sign Up", new_user_path, class: "btn btn-large btn-warning btn-block", method: "get" %>
    </div>

    <div class="col-sm-5 well col-sm-offset-1">
    <p>I have an account...</p>

    <%= form_for session_path, url: '/session'  do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign In", class: "btn btn-warning btn-lg btn-block" %>
      </div>

    <% end %>

    </div>
  </div>
</div>