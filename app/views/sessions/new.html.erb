<br><br>
<div class="row">

  <div class="col-sm-5 col-sm-offset-1">
    <div class="user-section">
      <h2 class="text-center">I do NOT have an account </h2>
        <%= link_to 'Sign Up' , new_user_path , class: 'btn btn-primary btn-block btn-lg '%>
    </div>
  </div>
  <div class="col-sm-5 ">
    <div class="user-section">
      <h2 class="text-center">I have an account </h2>
      <%= form_for :session, url: '/session' do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <%= f.submit "Sign In", class: 'btn btn-lg btn-primary btn-block' %>

      <% end %>
    </div>
  </div>
</div>
