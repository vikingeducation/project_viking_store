<% content_for :title do %>
  <title>Viking Store Admin Portal</title>
<% end %>

<div class="row">
  <div class="col-md-9 main-content">
    <h2 class="text-center">Category <%= @category.id %>: <%=@category.name %> </h2>

    <table>
        <tbody>
          <tr>
            <td><strong>Category ID:</strong></td>
            <td> <%=@category.id %>  </td>
          </tr>
          <tr>
            <td><strong>Name</strong></td>
            <td> <%=@category.name %></td>
          </tr>
        </tbody>
    </table>
    <br />

    <p><%= link_to "Edit Category", edit_category_path(@category) %></p>
    <p><%= link_to "Delete Category", category_path(@category),
                      data: { confirm: "Are you sure?" },
                      method: :delete %></p>
    <br />
    <h5>Products in : <%=@category.name %> </h5>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <td><strong>ID</strong></td>
          <td><strong>Name</strong></td>
        </tr>
      </thead>
      <tbody>

         <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name %></td>
          </tr>
        <% end %>
          
      </tbody>
    </table>

  </div>
</div>