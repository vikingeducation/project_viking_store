<%= form_for @category do |f| %>
  <%= label_tag(:name, "Name") %>
  <br />
  <%= form_field_error_message(@category, :name) %>
  <br />
  <%= f.text_field :name %>
  <br />
  <br />
  <br />

  <%= label_tag(:description, "Description") %>
  <br />
  <%= form_field_error_message(@category, :description) %>
  <br />
  <%= f.text_area :description %>
  <br />
  <br />
  <br />
  <%= f.submit "Create category" %>
<% end %>
