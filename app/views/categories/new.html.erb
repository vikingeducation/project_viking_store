<h2 class="text-center">New Category</h2>

<%= form_for @category do |f| %>
  <div class="form-group form-row"%>
    <div class="col-2">
      <%= f.label :id, "Category ID:", class: "col-form-label font-weight-bold" %>
    </div>
    <div class="col">
      <%= f.text_field :id, readonly: true, value: "N/A", class: "form-control-plaintext" %>
    </div>
  </div>

  <div class="form-group form-row">
    <div class="col-2">
      <%= f.label :name, "Name:", class: "col-form-label font-weight-bold" %>
    </div>
    <div class="col">
      <div class="form-row">
        <div class="col">
          <%= field_with_errors(@category, :name) %>
        </div>
      </div>
      <div class="form-row">
        <div class="col">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group form-row">
    <div class="col-2">
      <%= f.label :description, "Description:", class: "col-form-label font-weight-bold" %>
    </div>
    <div class="col">
      <div class="form-row">
        <div class="col">
          <%= field_with_errors(@category, :description) %>
        </div>
      </div>
      <div class="form-row">
        <div class="col">
          <%= f.text_field :description, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <%= f.submit "Create Category", class: "btn btn-primary btn-lg btn-block border rounded mt-4" %>
<% end %>
