<h2 class="text-center">New Category</h2>

<%= form_for @category do |f| %>
  <div class="form-group row"%>
    <%= f.label :id, "Category ID:", class: "col-2 col-form-label font-weight-bold" %>
    <div class="col-10">
      <%= f.text_field :id, readonly: true, value: "N/A", class: "form-control-plaintext" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :name, "Name:", class: "col-2 col-form-label font-weight-bold" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <%= f.submit "Create Category", class: "btn btn-primary btn-lg btn-block border rounded mt-4" %>
<% end %>
