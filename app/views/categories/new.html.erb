<h1>New Category</h1>
<% unless flash[:error].nil? %>
  <div class="alert alert-danger"><%= flash[:error] %></div>
<% end %>
<%= form_for @category do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>

  <%= f.label :description %>
  <%= f.text_area :description %><br/>

  <%= f.submit %>
<% end %>