<% content_for :title do %>
  <title>Viking Store Admin Portal</title>
<% end %>
<div class="row">
  <h1 class="text-center">Viking Store Admin Portal</h>
</div>
<div class="row">
  <%= render partial: "shared/admin_navbar" %>
   
  <div class="col-md-9 main-content">
    <h2 class="text-center">Product Categories</h2>
    <p><%= link_to "Add a New Category", new_category_path, class: "btn btn-primary btn-lg btn-block" %></p>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <td><strong>ID</strong></td>
          <td><strong>Name</strong></td>
          <td><strong>SHOW</strong></td>
          <td><strong>EDIT</strong></td>
          <td><strong>DELETE</strong></td>
        </tr>
      </thead>
      <tbody>
         <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= link_to "show", category_path(category) %></td>
            <td><%= link_to "edit", edit_category_path(category) %></td>
            <td><%= link_to "delete", category_path(category),
                      data: { confirm: "Are you sure?" },
                      method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>