<h2 class="text-center">Categories</h2>
<br />
<%= render "shared/left_nav"%>
<div class="col-md-8 pull-right">
  <%= link_to "Add New Category", new_category_path, class: "btn btn-primary btn-block" %>
  <br />

  <table class="table">
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  <% @categories.each do |category| %>

  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td><%= link_to "Show", category_path(category) %></td>
    <td><%= link_to "Edit", edit_category_path(category) %></td>
    <td><%= link_to "Delete", category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</div>
