<div class="top-section">
  <h2>Viking Store Categories</h2>
  <%= link_to "New Category", new_category_path, class: "btn btn-primary btn-lg" %>
</div>

<div class="list-group">
  <% @categories.each do |category| %>
    <%= link_to category_path(category), class: "list-group-item" do %>
      <h4 class="list-group-item-heading"><%= category.id %>: <%= category.name %></h4>
      <p class="list-group-item-text"><%= category.description %></p>
      <!-- <%= link_to "Edit", edit_category_path(category), class: "btn btn-success" %>
      <%= link_to "Delete", category_path(category), class: "btn btn-danger", method: "delete" %> -->
    <% end %>
  <% end %>
</div>
