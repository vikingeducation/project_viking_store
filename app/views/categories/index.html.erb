<h2 class="text-center">Product Categories</h2>

<%= button_to "Add a New Category", { action: "new" }, { method: :get, class: "btn btn-primary btn-lg btn-block border rounded mt-4" }%>

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>SHOW</th>
      <th>EDIT</th>
      <th>DELETE</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to "show", category_path(category.id) %></td>
        <td><%= link_to "edit", edit_category_path(category.id) %></td>
        <td><%= link_to "delete", category_path(category.id), method: :delete, data: { confirm: "Are you sure you want to delete this Category?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
