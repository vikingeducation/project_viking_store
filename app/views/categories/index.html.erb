<div class="row">
  <div class="col-xs-12">
    <h1>Categories</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to "New", new_category_path, class: "btn-primary btn col-xs-4 col-xs-offset-4" %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
  </div>
</div>

<div class="row">
  <%= render 'layouts/navbar' %>

  
  
  <div class="col-xs-8 col-xs-offset-1">
    <% @categories.each do |category| %>
      <h2><%= category.name %></h2>
      <p><%= category.description %></p>
      <p><%= link_to "Show", category_path(category.id) %>, <%= link_to "Edit", edit_category_path(category.id) %>, <%= link_to "Delete", category_path(category.id), method: "delete", data: { confirm: "Are you sure?"}  %></p>
      
    <% end %>
  </div>

    

</div>

