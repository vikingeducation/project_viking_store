<div class="col-sm-9">
  <h3 class="text-center">Product Categories</h3>
  <%= form_tag new_category_path, :method => "GET" do %>
    <%= submit_tag("Add a New Category") %>
  <% end %>


  <table class='table table-striped table-bordered'>
    <th>
      <td>ID</td>
      <td>Name</td>
      <td>Show</td>
      <td>Edit</td>
      <td>Delete</td>
    </th>
    
    <% @categories.all.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= link_to "show", category_path(category) %></td>
        <td><%= link_to "edit", edit_category_path(category) %></td>
        <td><%= link_to "delete",  category_path(category), method: :delete, data: {confirm: "Really delete the article?"} %></td>
      </tr>
    <% end %>
  </table>

</div>
