<%= form_for @category do |f| %>

	<div class="form-group">
		<%= f.label :id %><br>
		<%= @category.id %>
	</div>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control", placeholder: "Health and Beauty" %><%= form_field_error_messages(@category, :name) %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control", rows: "3", placeholder: "Beauty products and lotions and stuff ... " %><%= form_field_error_messages(@category, :description) %>
	</div>

	<div class="form-group">
		<%= f.submit %><br />
	</div>

<% end %>