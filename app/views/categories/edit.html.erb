<h2>Edit Category <%="#{@category.id}: #{@category.name}"%></h2>

<div class="row">
  <div class="col-xs-3">
    <%= form_for @category do |f| %>
    <%= f.label :id, "ID: " %><br>
    <%= f.label :name, "Name: " %>
  </div>
  <div class="col-xs-9">
    <%= @category.id || "N/A" %><br>
    <%= field_error_message(@category, :name) %>
    <%= f.text_field :name %><br><br>
  </div>
  <div class="col-xs-10 col-xs-offset-1">
    <%= f.submit "Edit", :class => "btn btn-primary btn-lg btn-block", :id => "new-resource-button"  %>
    <%end%>
  </div>

  <%= link_to "Delete Category", category_path(@category), :confirm => "Are you sure?", :method => :delete%>

</div>
