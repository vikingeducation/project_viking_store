<% @page_title = " | Edit Category" %>

<% if flash[:alert] %>
  <div class="notice">
    <%= flash[:alert] %>
  </div>
<% end %>

<section>
  <%= render :partial => "./shared/new_form",
             :locals => {:form_header => "Edit Category",
                         } %>

  <%= form_for @category, url: ("/admin/categories/" + @category.id.to_s), html: {method: :put} do |f| %>
    <%= f.label :id, "ID: " %>
    <%= f.text_field :id, :readonly => true %>
    <br>
    <br>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :description, "Descirption: " %>
    <%= f.text_area :description, size: "60x12" %>
    <br>
    <br>
    <%= f.submit "Update" %>
    <%= link_to 'delete', @category, data: {:confirm => "Are you sure?"}, :method => :delete %>
  <% end %>

</section>