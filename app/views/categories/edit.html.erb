<%= render partial: 'shared/admin_header' %>
<div class="container">

  <div class="row">
    <%= render partial: 'shared/nav' %>

    <article class="col-sm-9">

      <h2 class="text-center">
        Edit Category <%= @category.id %>: <%= @category.name %> 
      </h2>

      <%= form_for @category do |c| %>
        <div class="form-group">
          <%= c.label 'Category ID:', class: "control-label" %>
          <%= @category.id %>
        </div>

        <div class="form-group">
            <%= c.label 'Name:', class: "control-label" %>
            <%= c.text_field :name, placeholder: "enter the category name here", class: 'form-horizontal' %>  
        </div>

        <div class="form-group">
          <%= c.submit 'Create Category', class: 'btn btn-primary center-block extend' %>
        </div>
      <% end %>

      <h5 class="text-center">
        <%= link_to 'Delete Category', @category, method: 'delete', data: { confirm: 'Are you sure?' } %>
      </h5>
      
    </article>
  </div>
</div>