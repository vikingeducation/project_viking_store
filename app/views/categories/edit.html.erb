<section id='category-edit'>

  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <h1 class='text-center'><%= "Edit Category #{@category.id}: #{@category.name}" %></h1>

    </div>
  </div>


  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <%= render :partial => 'category_form', :locals => { :category => @category, :button_label => 'Update' } %>

    </div>
  </div>


  <div class='row'>
    <div class='col-xs-12 text-center '>

      <%= link_to 'Delete Category', category_path(@category.id),
            :method => :delete,
            :data => { :confirm => 'Delete category?' } %>

    </div>
  </div>


</section>