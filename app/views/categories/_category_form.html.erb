<%= form_for category do |f| %>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-3'>
        <%= f.label :id, 'Category ID:' %>
      </div>
      <div class='col-xs-9'>
        <% category.id = 'N/A' if category.id.nil? %>
        <%= f.text_field :id, disabled: true %>
      </div>
    </div>
  </div>

  <div class='form-group'>
    <div class='row'>
      <div class='col-xs-3'>
        <%= f.label :name, 'Name:' %>
      </div>
      <div class='col-xs-9'>
        <%= f.text_field :name %>
        <%= render_error(category,:name) %>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-xs-8 col-xs-offset-2'>
      <%= f.submit "#{button_label} Category", class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  </div>

<% end %>