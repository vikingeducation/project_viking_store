<table class="table table-bordered table-striped table-user">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>SKU</th>
		<th>Description</th>
		<th>Price</th>
	</tr>
	<% @products.each do |product| %>
		<tr>
			<td><%= link_to "#{product.id}", product_path(product.id) %></td>
			<td><%= product.name %></td>
			<td><%= product.sku %></td>
			<td><%= product.description %></td>
			<td><%= "$#{product.price}" %></td>
		</tr>
	<% end %>
</table>