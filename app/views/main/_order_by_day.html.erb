<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <td><strong>Date</strong></td>
      <td><strong>Quantity</strong></td>
      <td><strong>Value</strong></td>
    </tr>
  </thead>
  <tbody>
    <% @orders_by_day.each do |d| %>
      <tr>
        <td><%= d.day %></td>
        <td><%= d.num_orders %></td>
        <td><%= d.sum %></td>
      </tr>
    <% end %>
  </tbody>
</table>