<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <td><strong>Date</strong></td>
      <td><strong>Quantity</strong></td>
      <td><strong>Value</strong></td>
    </tr>
  </thead>
  <tbody>
    <% @orders_by_week.each do |w| %>
      <tr>
        <td><%= w.week %></td>
        <td><%= w.num_orders %></td>
        <td><%= w.sum %></td>
      </tr>
    <% end %>
  </tbody>
</table>