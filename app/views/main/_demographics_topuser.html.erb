<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <td><strong>Item</strong></td>
      <td><strong>User</strong></td>
      <td><strong>Quantity</strong></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Highest Single Order Value</td>
      <% @highest_single_order_value.each do |val| %>
        <td><%= val.first_name %> <%= val.last_name %></td>
        <td><%= val.order_value %></td>
      <% end %>
    <tr>
      <td>Highest Lifetime Value</td>
      <% @highest_lifetime_value.each do |val| %>
        <td><%= val.first_name %> <%= val.last_name %></td>
        <td><%= val.order_value %></td>
      <% end %>
    </tr>
    <tr>
      <td>Highest Average Order Value</td>
      <% @highest_average_order.each do |val| %>
        <td><%= val.first_name %> <%= val.last_name %></td>
        <td><%= val.order_value %></td>
      <% end %>
    </tr>
    <tr>
      <td>Most Orders Placed</td>
      <% @most_orders_placed.each do |val| %>
        <td><%= val.first_name %> <%= val.last_name %></td>
        <td><%= val.order_count %></td>
      <% end %>
    </tr>
  </tbody>
</table>