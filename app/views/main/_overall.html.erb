<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <td><strong>Item</strong></td>
      <td><strong>Data</strong></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>New Users</td>
      <td><%= @user_count_total %></td>
    </tr>
    <tr>
      <td>Orders</td>
      <td><%= @order_count %></td>
    </tr>
    <tr>
      <td>New Products</td>
      <td> <%= @product_count %> </td>
    </tr>
    <tr>
      <td>Revenue</td>
      <% @total_revenue.each do |revenue| %>
        <td><%= revenue.sum %></td>
      <% end %>
    </tr>
  </tbody>
</table>