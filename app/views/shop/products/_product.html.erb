		<% @products.each do |product| %>
			<div class="col-xs-12 col-sm-4 col-lg-3">

				<div class="panel panel-default product-box"> 
					<div class="panel-heading product-heading">
						<h3 class='panel-title'><%= product.name %></h3>
					</div>
					<div class="panel-body product-image">
						<span class="product-price"><%= product.price %></span>
					</div>
					<div class="product-footer panel-footer">

							<%= form_tag(shop_path(product.id), :method => :post) do %>
								<%= submit_tag "Add to Cart", {class: "add-to-cart btn btn-default btn-warning"}%>
							<% end %>

					</div>
				</div>
			</div>
		<%end%>

