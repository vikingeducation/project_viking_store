<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Item</th>
      <th>Data</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>
        <% if total %>
          Users
        <% else %>
          New Users
        <% end %>
      </th>
      <td><%= data[:new_users] %></td>
    </tr>
    <tr>
      <th>Orders</th>
      <td><%= data[:orders] %></td>
    </tr>
    <tr>
      <th>
        <% if total %>
          Products
        <% else %>
          New Products
        <% end %>
      </th>
      <td><%= data[:new_products] %></td>
    </tr>
    <tr>
      <th>Revenue</th>
      <td><%= data[:revenue] %></td>
    </tr> 
  </tbody>
</table>