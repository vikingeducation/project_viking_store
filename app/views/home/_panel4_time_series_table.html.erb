<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Quantity</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <% data.each_with_index do |data, index| %>
      <tr>
        <td>
          <%= "Today (#{data[0]})" if index == 0 && day %>
          <%= "Yesterday (#{data[0]})"if index == 1 && day %>
          <%= data[0] unless day && index < 2 %>
        </td>
        <td><%= data[1] %></td>
        <td><%= data[2] %></td>
      </tr>
    <% end %>
  </tbody>
</table>