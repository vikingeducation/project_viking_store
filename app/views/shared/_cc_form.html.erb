<%= form_for [:admin, user, cc] do |f| %>
  <%= f.label :first_name, "First Name:" %>
  <%= f.text_field :first_name, value: user.first_name, disabled: true %><br>
  <%= f.label :last_name, "Last Name:" %>
  <%= f.text_field :last_name, value: user.last_name, disabled: true %><br>
  <%= f.hidden_field :user_id, value: user.id %> 
  <%= f.label :card_number, "Number:" %>
  <%= f.number_field :card_number %><br>
  <%= f.label :exp_month, "Expiration Month:" %>
  <%= f.number_field :exp_month %><br>
  <%= f.label :exp_year, "Expiration Year:" %>
  <%= f.number_field :exp_year %><br>
  <%= f.label :ccv, "CCV:" %>
  <%= f.number_field :ccv %><br>
  <%= f.submit %>
<% end %>
<%= link_to "Remove Card", "#", method: :delete, data: {confirm: "Are you sure you want to remove this card?"} %>
