<footer id="main-footer">

  <div class="contact-info center-block">
    <h2>CONTACT</h2>
    <ul class="list-group">
      <%
      [
        [fa('phone-square'), '1 - 800 - AXE - GEAR', 'tel:1-000-000-0000'],
        [fa('envelope'), 'mail@vikingstore.com', 'mailto:mail@vikingstore.com'],
        [fa('github-square'), 'Bideo Wego on Github', 'https://github.com/BideoWego'],
        [fa('gamepad'), 'More by Bideo Wego', 'http://bideowego.com']
      ].each do |list_item|
        icon = list_item[0]
        text = list_item[1]
        href = list_item[2]
      %>

      <li class="list-group-item">
        <%= icon %>
        <%= link_to(text, href) %>
      </li>

      <% end %>
    </ul>
  </div>

</footer>