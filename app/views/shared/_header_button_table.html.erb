<header class="text-center">
  <h3><%= table_header %></h3>
</header>

<a href="<%= button_link %>"><button type="button" class="btn btn-primary btn-lg center-block"><%= button_label %></button></a>

<div class="stats-table">
  <table class="table table-striped">
    <tr>
      <% headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
    </tr>
    <% rows.each do |row| %>
      <tr>
        <% row.each do |data| %>
          <!-- This was done so that I could have the category column link to that categories show page. I put the category details into a hash in the Product model and this is how I've distinguished it from the rest of the data. -->
          <% unless data.class == Hash %>
            <td><%= data %></td>
          <% else %>
            <td><%= link_to data[:category_name], "/admin/#{belongs_to_plural}/#{data[:category_id]}" %><td>
          <% end %>
        <% end %>
        <td>
          <%= link_to 'show', 
                      "/admin/#{model_name_plural}/#{row[0]}" %>
        </td>
        <td>
          <%= link_to 'edit', 
                            "/admin/#{model_name_plural}/#{row[0]}/edit" %>
        </td>
        <td>
          <%= link_to 'delete', 
                      "/admin/#{model_name_plural}/#{row[0]}",
                      data: {:confirm => 'Are you sure?'}, 
                      :method => :delete %>
        </td>
      </tr>
    <% end %>
  </table>
</div>