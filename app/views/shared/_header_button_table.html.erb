<header class="text-center">
  <h3><%= table_header %></h3>
</header>

<a href="<%= button_link %>"><button type="button" class="btn btn-primary btn-lg center-block"><%= button_label %></button></a>

<div class="stats-table">
  <table class="table table-striped">
    <tr>
      <% headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
    </tr>
    <% rows.each do |row| %>
      <tr>
        <% row.each do |data| %>
          <td><%= data %></td>
        <% end %>
        <td>
          <%= link_to 'show', 
                      "/admin/categories/#{row[0]}" %>
        </td>
        <td>
          <%= link_to 'edit', 
                            "/admin/categories/#{row[0]}/edit" %>
        </td>
        <td>
          <%= link_to 'delete', 
                      "/admin/categories/#{row[0]}",
                      data: {:confirm => 'Are you sure?'}, 
                      :method => :delete %>
        </td>
      </tr>
    <% end %>
  </table>
</div>