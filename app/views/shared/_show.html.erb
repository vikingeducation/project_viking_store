<div class="row">
  <div class="col-xs-12">
    <h2><%= "#{model.class.to_s} #{model.id}" %></h2>
  </div>
</div>

<div class="row">
    <div class="col-xs-12">
      <table class="table table-striped table-bordered">
      <% model.attributes.each_pair do |attrib, value| %>
        <tr>
          <td><%= "Product #{attrib}:"%></td>
          <td><%=  "#{value}" %></td>
        </tr>
      <% end %>
      </table>
    </div>

</div>
