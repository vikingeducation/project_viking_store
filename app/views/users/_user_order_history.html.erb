<h3 class="text-center">Order History</h3>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Order Date</th>
      <th>Order Value</th>
      <th>Status</th>
      <th>SHOW</th>
      <th>EDIT</th>
      <th>DELETE</th>
    </tr>
  </thead>
  <tbody>
  <% user.orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.created_at.strftime('%Y-%m-%d') %></td>
      <td><%= order_value(order) %></td>
      <td><%= status(order) %></td>
      <td><%= link_to 'SHOW', order %></td>
      <td><%= link_to 'EDIT', edit_order_path(:user_id => user.id) %></td>
      <td><%= link_to 'DELETE', order, method: 'delete', data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>