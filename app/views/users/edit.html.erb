<div class="row">
  <div class="col">
    <h2 class="text-center">Edit User <%= @user.id %>: <%= "#{@user.first_name} #{@user.last_name}"%></h2>
  </div>
</div>

<div class="row justify-content-center mt-2 mb-4">
  <div class="col-11 border">

    <div class="row mt-2">
      <div class="col">
        <h4 class="text-center"><u>Demographic Information</u></h4>
      </div>
    </div>

    <!-- Edit User form -->
    <div class="row mt-2">
      <div class="col">
        <%= form_for @user do |f| %>
          <%= render partial: "shared_form_elements", locals: { f: f } %>

          <!-- Default billing address -->
          <div class="form-group form-row">
            <div class="col">
              <%= f.label :default_billing_address, class: "form-col-label font-weight-bold" %>
              <%= f.collection_select :billing_id, @user.addresses, :id, :to_s, { prompt: "Select an Address" }, { class: "form-control" } %>
            </div>
          </div>

          <!-- Default shipping address -->
          <div class="form-group form-row">
            <div class="col">
              <%= f.label :default_shipping_address, class: "form-col-label font-weight-bold" %>
              <%= f.collection_select :shipping_id, @user.addresses, :id, :to_s, { prompt: "Select an Address" }, { class: "form-control" } %>
            </div>
          </div>

          <!-- View User's Addresses link -->
          <div class="form-group form-row">
            <div class="col">
              <%= link_to "View Saved Addresses", "#" %>
            </div>
          </div>

          <div class="form-group form-row">
            <div class="col">
              <%= f.submit "Update User", method: :post, class: "btn btn-primary btn-lg btn-block border rounded mt-4 mb-2" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>

    <!-- Delete User link -->
    <div class="row mb-2">
      <div class="col text-center">
        <%= link_to "Delete #{@user.first_name} #{@user.last_name}", "#" %>
      </div>
    </div>

  </div>
</div>
