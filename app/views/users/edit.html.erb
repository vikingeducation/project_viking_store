<section id='user-edit'>

  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <h1 class='text-center'>
        <%= "Edit User #{@user.id}: #{@user.first_name} #{@user.last_name}" %>
      </h1>

    </div>
  </div>


  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <%= render :partial => 'user_form',
            :locals => {
                        :user => @user,
                        :available_addresses => @available_addresses,
                        :button_label => "Update #{@user.first_name} #{@user.last_name}"
                       },
            :layout => 'layouts/users/show_user_panel' %>


      <!-- DELETE USER -->
      <div class='row'>

        <div class='col-xs-12 text-center'>
          <%= link_to "Delete #{@user.first_name} #{@user.last_name}", user_path(@user.id),
                      :method => :delete,
                      :data => { :confirm => 'Delete #{@user.first_name} #{@user.last_name}?' } %>
        </div>

      </div>


    </div>
  </div>




</section>