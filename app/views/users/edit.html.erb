<%= render partial: 'shared/admin_header' %>
<div class="container">

  <div class="row">
    <%= render partial: 'shared/nav' %>

    <article class="col-sm-9">  
      <h2 class="text-center">Edit User <%= @user.id %>: <%= full_name(@user) %></h2>
      <br>
      <section class="col-sm-10 col-sm-offset-1">
        <h3 class="text-center">Demographic Information</h3>
        <%= render partial: 'form', locals: { user: @user } %>
        <h5 class="text-center">
          <%= link_to 'Delete User', @user, method: 'delete', data: { confirm: 'Are you sure?' } %>
        </h5>
      </section> 
    </article>

  </div>
  



</div>
