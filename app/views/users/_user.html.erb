<tr>
  <td><%= user[0].id %></td>
  <td><%= "#{user[0].first_name} #{user[0].last_name}" %></td>
  <td><%= user[0].created_at.to_date %></td>

  <td><%= user[1] %></td>
  <td><%= user[2] %></td>
  <td><%= link_to user[3], '#' %></td>
  <td><%= user[4] %></td>

  <td><%= link_to 'show', user_path(user[0].id) %></td>
  <td><%= link_to 'edit', edit_user_path(user[0].id) %></td>
  <td><%= link_to 'delete', user_path(user[0].id),
            :method => :delete,
            :data => { :confirm => 'Delete user?' } %></td>
</tr>