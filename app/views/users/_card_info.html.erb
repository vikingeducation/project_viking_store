<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Credit Card Information</h3>
  </div>
  <div class="panel-body">
    <% if cards = @user.credit_cards %>
      <% cards.each do |card| %>
        <table class="table">
          <tbody>
            <tr>
              <td><strong>First Name:</strong></td>
              <td><%= @user.first_name %></td>
            </tr>
            <tr>
              <td><strong>Last Name:</strong></td>
              <td><%= @user.last_name %></td>
            </tr>
            <tr>
              <td><strong>Number:</strong></td>
              <td><%= card.card_number %></td>
            </tr>
            <tr>
              <td><strong>Expiration:</strong></td>
              <td><%= "#{card.exp_year}-#{card.exp_month}-30" %></td>
            </tr>
            <tr>
              <td><strong>ccv:</strong></td>
              <td><%= card.ccv %></td>
            </tr>
            <tr>
              <td><%= link_to "Remove Card", user_credit_card_path(:user_id => @user.id, :id => card.id) %></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    <% else %>
      No credit_cards
    <% end %>
  </div>
</div>
