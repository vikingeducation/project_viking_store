<div class='panel panel-default'>

  <div class='panel-body'>

    <h4 class='text-center'>Account Information</h4>

    <div class='row'>
      <div class='col-xs-12'>
        <div class='form-group'>
          <%= user_fields.label :email, 'Email Address' %>
          <%= user_fields.text_field :email, class: 'form-control' %>
          <%= render_error(user_fields.object, :email) %>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class='col-xs-12'>
        <div class='form-group'>
          <%= user_fields.label :email_confirmation, 'Confirm Email' %>
          <%= user_fields.text_field :email_confirmation, class: 'form-control' %>
          <%= render_error(user_fields.object, :email_confirmation) %>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class='col-xs-12'>
        <div class='form-group'>
          <%= user_fields.label :first_name, 'First Name' %>
          <%= user_fields.text_field :first_name, class: 'form-control' %>
          <%= render_error(user_fields.object, :first_name) %>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class='col-xs-12'>
        <div class='form-group'>
          <%= user_fields.label :last_name, 'Last Name' %>
          <%= user_fields.text_field :last_name, class: 'form-control' %>
          <%= render_error(user_fields.object, :last_name) %>
        </div>
      </div>
    </div>

  </div> <!-- panel-body -->

</div>