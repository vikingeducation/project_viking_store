<div class="container">
  <div class="row text-center">
    <h1>User <%= @user.id %>: <%= @user.first_name %> <%= @user.last_name %></h1>
  </div>

  <div class="row text-center">
   <h3>Demographic Information</h3>
  </div>
  <div class="row">
    <p>First Name: <%= @user.first_name %></p>
    <p>Last Name: <%= @user.last_name %></p>
    <p>Email: <%= link_to @user.email %></p>
  </div>
  <div class="row">
    <p>Telephone: 311-380-9974 </p>
    <% unless @user.addresses.empty? %>
      <p>
        Default Billing Address:<br>
        <%= @user.default_billing_address.street_address %>, 
        <%= @user.default_billing_city.name %>, 
        <%= @user.default_billing_state.name %>
      </p>
    <% end %>
    <% unless @user.addresses.empty? %>
      <p>
        Default shipping Address:<br>
        <%= @user.default_shipping_address.street_address %>, 
        <%= @user.default_shipping_city.name %>, 
        <%= @user.default_shipping_state.name %>
      </p>
    <% end %>
  </div>
  <div class="row">
    <p><%= link_to "Edit #{@user.first_name}'s information", edit_user_path(@user) %></p>
   <p> <%= link_to "Delete #{@user.first_name}'s information", @user, method: :delete, data: {confirm: "Are you sure?"} %></p>
    <p><%= link_to "view saved addresses", user_addresses_path(@user) %></p>
    <p><%= link_to "view shopping cart" %></p>
  </div>
</div>

<div class="container">
  <% unless @user.credit_card.nil? %>
    <div class="row">
      <h1>Credit Card Information</h1>
    </div>
    <div class="row">
      <p>First Name: <%= @user.first_name %></p>
      <p>Last Name: <%= @user.last_name %></p>
      <p>Number: <%= @user.credit_card.card_number %></p>
      <p>Expiration: <%= @user.credit_card.exp_year %>-<%= @user.credit_card.exp_month %></p>
      <p>CV2: <%= @user.credit_card.ccv %></p>
      <%= link_to "Remove Card", user_credit_card_path(@user.id, @user.credit_card), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  <% end %>
</div>