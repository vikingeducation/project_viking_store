<%  @user.orders.each do |order|  %>

<tr>
  <td>
    <%= order.id %>
  </td>

  <td>
    <%= order_date(order) %>
  </td>

  <td>
    <%= number_to_currency(order.products.sum("quantity * price")) %>
  </td>
  
  <td>
    <%= status(order) %>
  </td>

  <td>
    <%= link_to "show", user_order_path(@user, order) %>
  </td>

  <td>
    <%= link_to "edit", edit_user_order_path(@user, order) %>
  </td>

  <td>
    <%= link_to "delete", user_order_path(@user, order), data: {confirm: "Do you really want to delete this order?"}, :method => :delete %>
  </td>
</tr>

<% end %>