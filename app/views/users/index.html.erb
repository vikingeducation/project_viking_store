


<div class="col-sm-9">
  <h3 class="text-center">Viking Store Users</h3>
  <button class='btn btn-primary'>Create A New User</button>

  <table class='table table-striped table-bordered'>
    <th>
      <td>ID</td>
      <td>Name</td>
      <td>Joined</td>
      <td>City</td>
      <td>State</td>
      <td>Orders</td>
      <td>Last Order Date</td>
      <td>Show</td>
      <td>Edit</td>
      <td>Delete</td>
    </th>
    
    <% @users.all.each do |user| %>
      <tr>
        <td><%= user.billing_id %></td>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.created_at %></td>
        <td><%= user.addresses[0].city.name  %></td>
        <td><%= user.addresses[0].state.name  %></td>
        <td><%= user.orders.count %></td>
        <td><%= "last order date"  %></td>
        <td><%= link_to "show", root_path %></td>
        <td><%= link_to "edit", root_path %></td>
        <td><%= link_to "delete", root_path %></td>
      </tr>
    <% end %>
  </table>

</div>



