<h2>Create a New User</h2>

<div class="row content-wrapper">
  <h3>Demographic Information</h3>
  <div class="col-xs-3">
    <%= form_for @user do |f| %>
    <%= f.label :first_name, "First Name: " %><br><br>
    <%= f.label :last_name, "Last Name: " %><br><br>
    <%= f.label :email, "Email: " %>
  </div>
  <div class="col-xs-9">
    <%= field_error_message(@user, :first_name) %>
    <%= f.text_field :first_name %><br><br>
    <%= field_error_message(@user, :last_name) %>
    <%= f.text_field :last_name %><br><br>
    <%= field_error_message(@user, :email) %>
    <%= f.text_field :email%><br><br>


  </div>
  <div class="col-xs-10 col-xs-offset-1">
    <%= f.submit "Create New User", :class => "btn btn-primary btn-lg btn-block", :id => "new-resource-button"  %>
    <%end%>
  </div>

</div>
