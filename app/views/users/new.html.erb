<div class="row">
  <div class="col">
    <h2 class="text-center">Create A New User</h2>
  </div>
</div>

<div class="row justify-content-center mt-2 mb-4">
  <div class="col-11 border">

    <div class="row mt-2">
      <div class="col">
        <h4 class="text-center"><u>Demographic Information</u></h4>
      </div>
    </div>

    <!-- New User form -->
    <div class="row mt-2">
      <div class="col">
        <%= form_for @user do |f| %>
          <%= render partial: "shared_form_elements", locals: { f: f } %>

          <div class="form-group form-row">
            <div class="col">
              <%= f.submit "Create User", method: :post, class: "btn btn-primary btn-lg btn-block border rounded mt-4 mb-2" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>

  </div>
</div>
