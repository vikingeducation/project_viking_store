<div class="row">
  <div class="col">
    <h2 class="text-center">Create A New User</h2>
  </div>
</div>

<div class="row justify-content-center mt-2 mb-4">
  <div class="col-11 border">

    <div class="row mt-2">
      <div class="col">
        <h4 class="text-center"><u>Demographic Information</u></h4>
      </div>
    </div>

    <!-- form -->
    <div class="row mt-2">
      <div class="col">
        <%= form_for @user do |f| %>
          <div class="form-group form-row" %>
            <div class="col-3">
              <%= f.label :first_name, "First Name:", class: "col-form-label font-weight-bold" %>
            </div>
            <div class="col">
              <div class="row">
                <div class="col">
                  <%= field_with_errors(@user, :first_name) %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group form-row" %>
            <div class="col-3">
              <%= f.label :last_name, "Last Name:", class: "col-form-label font-weight-bold" %>
            </div>
            <div class="col">
              <div class="row">
                <div class="col">
                  <%= field_with_errors(@user, :last_name) %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group form-row" %>
            <div class="col-3">
              <%= f.label :email, "Email:", class: "col-form-label font-weight-bold" %>
            </div>
            <div class="col">
              <div class="row">
                <div class="col">
                  <%= field_with_errors(@user, :email) %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= f.text_field :email, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group form-row" %>
            <div class="col-3">
              <%= f.label :phone_number, "Telephone: ", class: "col-form-label font-weight-bold" %>
            </div>
            <div class="col">
              <%= f.text_field :phone_number, class: "form-control" %>
            </div>
          </div>

          <div class="form-group form-row">
            <div class="col">
              <%= f.submit "Create User", method: :post, class: "btn btn-primary btn-lg btn-block border rounded mt-4 mb-2" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>

  </div>
</div>
