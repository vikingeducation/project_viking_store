      <h3 class="panel-title">Admin Actions for <%= "#{@user.first_name} #{@user.last_name}" %></h3>
    </div>
    <div class="panel-body">
      <div class="col-md-12">
        <%= link_to "Create Order", new_order_path(:user_id => @user.id), class: "btn btn-primary btn-lg" %>
