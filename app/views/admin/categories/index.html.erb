<section id='admin-category-index'>

  <div class='row'>
    <div class='col-xs-6 col-xs-offset-3'>

      <h1 class='text-center'>Product Categories</h1>

      <%= link_to 'Add a New Category', new_admin_category_path, class: 'btn btn-success btn-lg btn-block' %>

    </div>
  </div>

  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <table class='table table-striped table-bordered'>

        <thead class='bg-success text-center'>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>SHOW</td>
            <td>EDIT</td>
            <td>DELETE</td>
          </tr>
        </thead>

        <tbody>
          <%= render @categories %>
        </tbody>

      </table>

    </div>
  </div>

</section>