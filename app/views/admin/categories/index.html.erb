<h2 class="text-center">Viking Store Admin Portal</h2>

<div class="container">
  <div class="row">
    <%= render partial: 'shared/sidebar' %>

    <div class='col-sm-9'>
      <h3 class="text-center">Viking Store Categories</h3>
      <a class='btn btn-primary btn-block' role='button' href=<%=new_admin_category_path %> >Create A New Category</a>

      <table class='table table-striped table-bordered'>
        <th>
          <td>ID</td>
          <td>Name</td>
          <td>Show</td>
          <td>Edit</td>
          <td>Delete</td>
        </th>
        
        <% @categories.all.each do |category| %>
          <tr>
            <td></td>
            <td><%= category.id
             %></td>
            <td><%= category.name %></td>
            <td><%= link_to "Show", admin_category_path(category) %></td>
            <td><%= link_to "Edit", edit_admin_category_path(category) %></td>
            <td><%= link_to "Delete", admin_category_path(category), method: :delete %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>