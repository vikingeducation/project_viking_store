<% @page_title = " | Categories" %>

<% if flash[:notice] %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<section>
	<header class="text-center">
	  <h3>Categories</h3>
	</header>

	<div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    	<%= link_to "Create New Category", new_admin_category_path, :class => "btn btn-primary btn-lg center-block" %>
    </div>
  </div>

	<div class="stats-table">
	  <table class="table table-striped">
	    <tr>
	      <% @column_headers.each do |header| %>
	        <th><%= header %></th>
	      <% end %>
	    </tr>
	    <% @categories.each do |category| %>
	      <tr>
	        <td><%= category.id %></td>
					<td><%= category.name %></td>
	        <td>
	          <%= link_to 'show', admin_category_path(:id => category.id) %>
	        </td>
	        <td>
	          <%= link_to 'edit', edit_admin_category_path(:id => category.id) %>
	        </td>
	        <td>
	          <%= link_to 'delete', 
	                      admin_category_path(:id => category.id),
	                      data: {:confirm => 'Are you sure?'}, 
	                      :method => :delete %>
	        </td>
	      </tr>
	    <% end %>
	  </table>
	</div>
</section>