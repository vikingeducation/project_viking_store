<h1 class="heading">All Categories</h1>
<%= link_to "Add A New Category", new_admin_category_path, class: "btn-block btn-primary btn-lg", id: "new-btn" %>
<table class="table table-striped" id="index-table">
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>SHOW</th>
    <th>EDIT</th>
    <th>DELETE</th>
  </thead>
  <tbody>
    <tr>
      <% @categories.each do |cat| %>
        <td><%= cat.id %></td>
        <td><%= cat.name %></td>
        <td id="index-link"><%= link_to "Show", admin_category_path(cat) %></td>
        <td id="index-link"><%= link_to "Edit", edit_admin_category_path(cat) %></td>
        <td id="index-link"><%= link_to "Delete", admin_category_path(cat), method: 'delete', data: {confirm: "Are you sure you'd like to delete this category?"} %></td>
    </tr>
    <% end %>

  </tbody>
</table>
