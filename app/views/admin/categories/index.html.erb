<h2 class="text-center">Product Categories</h2>
<br>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <p>
      <%= link_to 'Add a New Category', new_admin_category_path, class: 'btn btn-primary btn-block' %>
    </p>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= link_to 'show', admin_category_path(category) %></td>
            <td><%= link_to 'edit', edit_admin_category_path(category) %></td>
            <td><%= link_to 'delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

