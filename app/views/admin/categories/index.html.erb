<div class="panel panel-default text-center">
  <div class="panel-heading">
    <h2>Categories</h2>
  </div>
  <div class="panel-body">
    <%= link_to "Create New Category", new_admin_category_path,
                :class => "btn btn-primary btn-block btn-lg" %>
    <br>

    <table class="table table-bordered">
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% @categories.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= c.description %></td>
        <td><%= link_to "Show", admin_category_path(c.id) %></td>
        <td><%= link_to "Edit", edit_admin_category_path(c.id) %></td>
        <td>
          <%= link_to "Delete",
                      admin_category_path(c.id),
                      :method => :delete,
                      :data => {:confirm => "Are you sure?"}
          %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
