<table class="table">
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>SHOW</th>
		<th>EDIT</th>
		<th>DELETE</th>
	</tr>
	<% categories.each do |category| %>
	<tr>
		<td><%= category.id %></td>
		<td><%= category.name %></td>
		<td><%= link_to "Show", [:admin, category] %></td>
		<td><%= link_to "Edit", edit_admin_category_path(category.id) %></td>
		<td><%= link_to "Delete", [:admin, category], method: :delete, data: {confirm: 'Are you Sure?'} %></td>
	</tr>
	<% end %>

</table>
