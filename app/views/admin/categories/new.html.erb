<div class="admin-main-content-header text-center">
  <h1>Create a New Category</h1>
</div>
<hr class="admin-hr">
<%= form_for [:admin, @category] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", "aria-describedby": "categoryHelp" %>
    <small id="categoryHelp" class="form-text text-muted">Name must be 4-16 characters.</small>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 3 %>
  </div>
  <div class="text-right">
  <%= f.submit "Create Category", class: "btn btn-primary" %> 
  </div>
<% end %>