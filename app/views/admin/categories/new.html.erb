<H3>New Category</H3>

<div class="form-wrapper">

  <%= form_for @category, url: "/admin/categories", html: { :class => "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= f.label :id, "Category ID:", class: "col-sm-4 control-label" %>
<!--         <%= f.text_field :id, class: "form-control", placeholder: "N.A.", disabled: 'disabled' %> -->
      <div class="col-sm-8">
        <h4><%= "N.A" %></h4>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, "Name:", class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="button-wrapper">
      <%= f.submit "Create Category", class: "btn btn-primary btn-group btn-group-lg" %>
    </div>
  <% end %>

</div>