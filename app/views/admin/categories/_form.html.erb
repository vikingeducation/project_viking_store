<%= form_for [:admin, @category], html: {class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <label class="col-sm-2 control-label">ID</label>
    <div class="col-sm-8">
      <%= f.text_field :id, class: "form-control", disabled: true, placeholder: "N/A" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <%= field_with_errors(@category, :name) %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "enter the category name here" %>
    </div>
  </div>

  <br>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
  <br>
<% end %>