<div>


<% if @category.id %>
  <h3>Category ID: <%= @category.id %></h3>
<% else %>
  <h3>Category ID: N/A</h3>
<% end %>

<%= form_for [:admin, @category] do |f| %> 

  <div class="form-group">
    <%= f.label :name %>
    <%= field_with_errors(@category, :name) %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= field_with_errors(@category, :description) %>
    <%= f.text_area :description, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary btn-lg btn-block" %>
  </div>


<% end %>
</div>