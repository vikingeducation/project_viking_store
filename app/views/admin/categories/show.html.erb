<%= render partial: 'shared/show', locals: { model: @category } %>




<div class="row">
  <div class="col-xs-2">
    <%= link_to "Edit #{@category.class}", edit_admin_category_path(@category.id) %>
  </div>
  <div class="col-xs-2">
    <%= link_to "Delete #{@category.class}", admin_category_path(@category.id), method: "delete" %>
  </div>
</div>

<br>


<div class="row">
  <div class="col-xs-4">
    <table class="table table-striped table-bordered">
      <thead>
        <th>ID</th>
        <th>Name</th>
      </thead>
      <tbody>
        <% @products.each do |p| %>
        <tr>
          <td><%= p.product_id %></td>
          <td><%= p.product_name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
