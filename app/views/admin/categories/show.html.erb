<section id='admin-category-show'>

  <div class='row'>
    <div class='col-xs-10 col-xs-offest-1'>

      <h1 class='text-center'><%= "Category #{@category.id}: #{@category.name}" %></h1>

    </div>
  </div>

  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <div class='row'>
        <div class='col-xs-3'>
          <p><strong>Category ID:</strong></p>
        </div>

        <div class='col-xs-9'>
          <p><%= @category.id %></p>
        </div>
      </div>

      <div class='row'>
        <div class='col-xs-3'>
          <p><strong>Name:</strong></p>
        </div>

        <div class='col-xs-9'>
          <p><%= @category.name %></p>
        </div>
      </div>

      <div class='row'>
        <div class='col-xs-12'>
          <%= link_to 'Edit Category', edit_admin_category_path(@category.id) %>
        </div>
      </div>

      <div class='row'>
        <div class='col-xs-12'>
          <%= link_to 'Delete Category', admin_category_path(@category.id), :method => :delete, :data => { :confirm => 'Delete category?' } %>
        </div>
      </div>

      <div class='row'>
        <div class='col-xs-12'>
          <h5><strong><%= "Products in #{@category.name}:" %></strong></h5>
        </div>
      </div>

      <div class='row'>
        <div class='col-xs-10 col-xs-offset-1'>
          <table class='table table-striped table-bordered table-condensed'>
            <thead class='bg-success'>
              <tr>
                <td>ID</td>
                <td>Name</td>
              </tr>
            </thead>

            <tbody>
              <%= render partial: 'product', collection: @products %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>

</section>