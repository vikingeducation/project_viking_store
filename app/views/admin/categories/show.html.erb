<h2>Category <%= @category.id %>: '<%= @category.name %>'</h2>
<dl class="dl-horizontal">
<dt>Category Name</dt>
<dd><%= @category.name %></dd>
  <dt>Category ID</dt>
  <dd><%= @category.id %></dd>
  <dt>Category Description</dt>
  <dd><%= @category.description %></dd>
</dl>
<%= link_to 'Edit Category', [:edit, :admin, @category], class: 'btn btn-default' %>
<%= link_to 'Delete Category', [:admin, @category], method: :delete, data: {confirm: 'Are you sure you want to delete this item?'}, class: 'btn btn-danger' %>

<h3>Products in this category:</h3>
<table class="table">
  <thead>
    <th>ID</th>
    <th>Product</th>
  </thead>
  <tbody>
    <% @products.each do |prod| %>
    <tr>
    <td><%= prod.id %></td>
      <td><%= link_to prod.name, '#' %></td>
    </tr>
    <% end %>
  </tbody>
</table>