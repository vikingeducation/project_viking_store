<h2 class="text-center">Category <%= @category.id %>:  <%= @category.name %></h2>
<br>

<dl class="dl-horizontal">
  <dt>Category ID:</dt>
  <dd><%= @category.id %></dd>

  <dt>Name:</dt>
  <dd><%= @category.name %></dd>
</dl>

<p>
  <%= link_to 'Edit Category', edit_admin_category_path(@category) %>
</p>
<p>
  <%= link_to 'Delete Category', admin_category_path(@category), method: :delete, data: { confirm: 'Are you sure?' } %>
</p>

<br>
<h3>Products in <%= @category.name %></h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.name, admin_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>