<div class="row">
	<div class="col-sm-4 col-sm-offset-4">
		<h4>Products in <%= category.name %> :</h4>

		<table class= "table">
			<tr>
				<th>Id</th>
				<th>Name</th>
			</tr>
			<% category.products.each do |product| %>
				<tr>
					<td><%= product.id %></td>
					<td><%= link_to product.name, "#" %></td>
				</tr>
			<% end %>

		</table>
	</div>
</div>