<h1 class="text-center">Foo Bar's Address</h1>

<div class='panel panel-default'>
  <h5><strong>Owner ID:</strong> <%= @address.user_id %></h5>
  <h5><strong>Owner Name:</strong> <%= link_to "#{@address.user.first_name} #{@address.user.last_name}", admin_user_path(@user) %></h5>
  <h5><strong>Street:</strong> <%= @address.street_address %></h5>
  <h5><strong>City:</strong> <%= @address.city.name %></h5>
  <h5><strong>State:</strong> <%= @address.state.name %></h5>
  <h5><strong>Zip:</strong> <%= @address.zip_code %></h5>
</div>
<%= link_to "Edit Address", edit_admin_user_address_path(@address.user_id, @address.id), class: 'btn btn-primary btn-lg btn-block' %>
<%= link_to "Delete", admin_user_address_path(@address.user_id, @address.id), class: 'btn btn-danger btn-lg btn-block', method: "delete", data: { confirm: "Are you sure?" }%>
<br/>