<h2 class="text-center"><%= @user.full_name %>'s Address</h2>
<div class="row">
  <div class="col-sm-2">
    <span class="h5">Owner ID:</span>
  </div>
  <div class="col-sm-10">
    <span><%= @user.id %></span>
  </div>
</div>
<div class="row">
  <div class="col-sm-2">
    <span class="h5">Owner Name:</span>
  </div>
  <div class="col-sm-10">
    <span><%= link_to "#{@user.full_name} (click to view user)", admin_user_path(@user) %></span>
  </div>
</div>
<div class="row">
  <div class="col-sm-2">
    <span class="h5">Street:</span>
  </div>
  <div class="col-sm-10"><span><%= @address.street_address %></span></div>
</div>
<div class="row">
  <div class="col-sm-2"><span class="h5">City:</span></div>
  <div class="col-sm-10"><span><%= @address.city.name %></span></div>
</div>
<div class="row">
  <div class="col-sm-2"><span class="h5">State:</span></div>
  <div class="col-sm-10"><span><%= @address.state.name %></span></div>
</div>
<div class="row">
  <div class="col-sm-2"><span class="h5">Zip</span></div>
  <div class="col-sm-10"><span><%= @address.zip_code %></span></div>
</div>
<div class="row mts">
  <div class="col-xs-12">
    <p><%= link_to 'Edit Address', edit_admin_user_address_path(@user, @address) %></p>
    <p><%= link_to 'Delete Address', admin_user_address_path(@user, @address), method: :delete, data: {confirm: 'Are you sure you want to delete this address?'}  %></p>
  </div>
</div>