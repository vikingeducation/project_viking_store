<div class="panel-heading">
  <% if @user %>

    <div class="panel-btns pull-right">
      <%= link_to "Create New Address For #{@user.first_name}", 
          new_admin_address_path(user_id: @user) , class: "btn btn-primary"  %>
    </div>
    <h4><%= @user.first_name %> <%= @user.last_name %>'s Addresses</h4>

  <% else %>  

    <h4>Addresses</h4>
    <em>Create new addresses from within <%= link_to "User", admin_users_path %> profiles</em>

  <% end %>
</div>

<!-- id, user_first, street, city, state, orders, created, show, edit,delete -->
<div class="panel-body">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Orders</th>
        <th>Created</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>

      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.id %></td>
          <td>
            <% if params[:user_id] %>
              <%= link_to address.user.first_name, admin_user_path(address.user) %>
            <% else %>
              <%= link_to address.user.first_name, 
                          admin_addresses_path(user_id: address.user.id) %>
            <% end %>
          </td>
          <td><%= address.street_address %></td>
          <td><%= address.city.name %></td>
          <td><%= address.state.name %></td>
          <td><%= address.orders_count %></td>
          <td class="text-nowrap"><%= address.created_at.strftime('%Y-%m-%d') %></td>
          <td><%= link_to 'Show', admin_address_path(address.id) %></td>
          <td><%= link_to 'Edit', edit_admin_address_path(address.id) %></td>
          <td><%= link_to 'Delete', admin_address_path(address.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>