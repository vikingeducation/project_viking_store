<h1>All Addresses</h1>

<table class="#{<%= table_classes %>}, table-responsive">
  <thead>
    <tr>
      <th>User</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td>
          <%= link_to address.user.name, admin_user_path(address.user) %><br>
          <%= link_to "(New Address)", new_admin_user_address_path(address.user) %>
        </td>
        <td>
          <%= address.street_address %><br>
          <%= address.secondary_address if address.secondary_address %>
        </td>
        <td><%= address.city.name %></td>
        <td><%= address.state.abbreviation %></td>
        <td><%= address.zip_code %></td>
        <td><%= link_to 'Show', admin_user_address_path(address.user.id, address) %></td>
        <td><%= link_to 'Edit', edit_admin_user_address_path(address.user.id, address) %></td>
        <td><%= link_to 'Delete', admin_user_address_path(address.user.id, address), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
