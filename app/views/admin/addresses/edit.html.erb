<% @page_title = " | Edit Address" %>

<% if flash[:alert] %>
	<div class="notice">
		<%= flash[:alert] %>
	</div>
<% end %>

<%= render :partial => "edit_or_new_form",
           :locals => {:form_type => "edit",
           						 :form_header => "Edit Address for #{@user.full_name}",
           						 :address => @address,
           						 :user => @user,
           						 :submit_label => "Update Address"
           						 } %>