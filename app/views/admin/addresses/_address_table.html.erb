<table class="table">
  <thead>
    <th>ID</th>
    <th>User</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Orders</th>
    <th>Created</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>
  <tbody>
    <% @addresses.each do |a| %>
      <% user = @user || User.find(a.user_id) %>
      <tr>
        <td><%= a.user_id %></td>
        <td><%= link_to user.full_name, admin_user_path(user) %></td>
        <td><%= a.street_address %></td>
        <td><%= a.city.name %></td>
        <td><%= a.state.name %></td>
        <td><%= user.order_count %></td>
        <td><%= user.created_at.strftime('%d/%m/%y') %></td>
        <td><%= link_to 'Show', admin_user_address_path(user, a) %></td>
        <td><%= link_to 'Edit', edit_admin_user_address_path(user, a) %></td>
        <td><%= link_to 'Delete', admin_user_address_path(user, a), method: :delete, data: {confirm: "Are you sure you want to delete the address #{a.street_address}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>