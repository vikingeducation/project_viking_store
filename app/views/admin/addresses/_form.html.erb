<%= form_for [:admin, address] do |f| %>
  <%= f.hidden_field :user_id, :value => address.user.id %>

  <div class="form-group">
		<%= f.label :street_address %>
		<%= f.text_field :street_address %>
		<%= field_with_errors address, :street_address %>
	</div>

	<div class="form-group">
		<%= f.label :city_id %>
		<%= f.collection_select(:city_id, City.all, :id, :name) %>
		<%= field_with_errors address, :city_id %>
  </div>

  <div class="form-group">
		<%= f.label :zip_code %>
		<%= f.text_field :zip_code %>
		<%= field_with_errors address, :zip_code %>
	</div>

	<div class="form-group">
		<%= f.label :state_id %>
		<%= f.collection_select(:state_id, State.all, :id, :name) %>
		<%= field_with_errors address, :state_id %>
    </div>

	<div class="form-group">
		<%= f.submit %>
	</div>


<% end %>
