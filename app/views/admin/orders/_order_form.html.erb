<div class="user-info">
  <h3 class="text-center">Logistical Information</h3>
  <br />
  <h4>Basic Information</h4>
  <p><strong>Customer ID:</strong> <%= @user.id %></p>
  <p><strong>Customer name:</strong> <%= link_to @user.first_name + ' ' + @user.last_name, admin_user_path(@user.id) %></p>
  <p><strong>Telephone:</strong> N/A</p>
  <p><%= link_to "Edit Customer Profile", edit_admin_user_path(@user.id) %></p>
  <br />

  <%= form_for [:admin, @order] do |f| %>
    <%= f.hidden_field(:user_id, value: @user.id) %>
    <h4>Shipping address</h4>
    <%= f.collection_select(:shipping_id, Address.where("user_id = ?", @user.id), :id, :street_address) %><br />
    <h4>Billing address</h4>
    <%= f.collection_select(:billing_id, Address.where("user_id = ?", @user.id), :id, :street_address) %><br />
    <%= f.submit "Confirm addresses", class: "btn btn-primary" %>
  <% end %>

</div>
