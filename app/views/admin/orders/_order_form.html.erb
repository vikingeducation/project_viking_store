<%= form_for [:admin, @user, @order] do |order_field| %>

  <%= order_field.label :billing_id, 'Billing Address' %>
  <% if @user.addresses.empty? %>
    <%= order_field.text_field :billing_address %>
  <% else %>
    <%= order_field.collection_select(:billing_id, @user.addresses, :id, :street_address) %>
  <% end %>
  </br>
  <%= order_field.label :shipping_id, 'Shipping Address' %>
  <% if @user.addresses.empty? %>
    <%= order_field.text_field :shipping_address %>
  <% else %>
    <%= order_field.collection_select(:shipping_id, @user.addresses, :id, :street_address) %>
  <% end %>
  </br>
  <%= order_field.label :credit_card_id, 'Credit Card' %>
  <% if @user.credit_cards.empty? %>
    <%= order_field.text_field :credit_card %>
  <% else %>
    <%= order_field.collection_select(:credit_card_id, @user.credit_cards, :id, :card_number) %>
  <% end %>
  </br>
  <%= order_field.submit %>

<% end %>

