<%= form_for [:admin, @user, @order] do |f| %>
<div class="form-group <%= form_error_class(@order, :shipping_id) %>">
  <%= f.label :shipping_id, "Shipping Address" %>
  <%= f.select :shipping_id, options_from_collection_for_select(@user.addresses, :id, :street_address, @user.shipping_id), {}, class: 'form-control' %>
   <%= form_error(@order, :shipping_id) %>
</div>
<div class="form-group <%= form_error_class(@order, :billing_id) %>">
  <%= f.label :billing_id, "Billing Address" %>
  <%= f.select :billing_id, options_from_collection_for_select(@user.addresses, :id, :street_address, @user.billing_id), {}, class: 'form-control' %>
     <%= form_error(@order, :billing_id) %>
</div>
  <div class="form-group <%= form_error_class(@order, :credit_card_id) %>">
  <%= f.label :credit_card_id, "Credit Card" %>
  <%= f.select :credit_card_id, options_for_select(@cards), {}, class: 'form-control' %>
       <%= form_error(@order, :credit_card_id) %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
  <p class="text-center">You can add products on the next screen, once it's been created</p>
<% end %>