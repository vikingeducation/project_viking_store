<div class="container">
  <div class="row">
    <%= render partial: 'shared/sidebar' %>

    <div class="col-sm-9">
      <h3 class="text-center">Viking Store Orders</h3>
      <a class='btn btn-primary btn-block' role='button' href=<%=new_admin_user_order_path %> >Create A New Order</a>

      <table class='table table-striped table-bordered'>
        <th>
          <td>ID</td>
          <td>User ID</td>
          <td>Address</td>
          <td>City</td>
          <td>State</td>
          <td>Total Value</td>
          <td>Status</td>
          <td>Date Placed</td>
          <td>Show</td>
          <td>Edit</td>
          <td>Delete</td>
        </th>
        
        <% @orders.all.each do |order| %>
          <tr>
            <td></td>
            <td><%= order.id %></td>
            <td><%= order.user_id %></td>
            <td><%= order.shipping_address.street_address %></td>
            <td><%= order.shipping_address.city.name %></td>
            <td><%= order.shipping_address.state.name %></td>
            <td><%= order.value %></td>
            <td><%= order.status %></td>
            <td><%= order.date_placed %></td>
            <td><%= link_to "show", admin_user_order_path(id: order, user_id: @user) %></td>
            <td><%= link_to "edit", edit_admin_user_order_path(order, @user) %></td>
            <td><%= link_to "delete", admin_user_order_path(order, @user), method: :delete %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>