<div class='row'>

  <div class='col-xs-12'>
    <h3 class='text-center'><strong>Order Contents</strong></h3>
  </div>

</div>

<!-- Order Contents table -->
<div class='row show-block'>
  <div class='col-xs-12'>

    <table class='table table-striped table-bordered table-condensed text-center'>

        <thead class='bg-success'>
          <tr>
            <td>Product ID</td>
            <td>Product</td>
            <td>Quantity</td>
            <td>Price</td>
            <td>Total Price</td>
          </tr>
        </thead>

        <tbody>
          <%= render :partial => 'order_content', :collection => order_contents %>
        </tbody>

      </table>

  </div>
</div>

<!-- edit/delete links -->
<div class='row show-block'>

  <div class='col-xs-12'>
    <%= link_to "Edit Order", edit_admin_order_path(order.id) %>
  </div>

  <div class='col-xs-12'>
    <%= link_to "Delete Order", admin_order_path(order.id),
                :method => :delete,
                :data => { :confirm => 'Delete order?' } %>
  </div>

</div> <!-- edit/delete links -->