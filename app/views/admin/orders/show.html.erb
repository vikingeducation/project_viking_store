<h1 class='text-center'>Order <%= @order.id %></h1>
<div class='row' style='border: 2px solid black'>
  <h3 class='text-center'>Logistical Information</h3>
  <h5>Basic Information</h5>
  <p>Customer ID: <%= @user.id %></p>
  <p>Customer: <%= link_to "#{@user.full_name} (click to view user)", admin_user_path(@user) %></p>
  <p>Date Placed: <%= @order.date_placed %></p>
  <p># Products: <%= @order.quantity %></p>
  <p>Order Value: <%= @order.value %></p>
  <p><%= link_to "Edit Customer Profile", edit_admin_user_path(@user) %></p>

</div>