<h4>First name: <%= user.first_name %></h4>
<h4>Last name: <%= user.last_name %></h4>
<h4>Email: <%= user.email %></h4><br>

<h4>Default Billing Address: <%= user.billing_id.nil? ? "Billing Address empty" : print_address( user.billing_id ) %></h4>
<h4>Default Shipping Address: <%= user.shipping_id.nil? ? "Shipping Address empty" : print_address( user.shipping_id ) %></h4>

<%= link_to "Edit #{user.full_name}'s information", edit_admin_user_path(user) %><br>
<%= link_to "Delete #{user.full_name}", admin_user_path(user), method: :delete, data: {confirm: "Are you sure?"} %><br>
<%= link_to "View Saved Addresses", admin_user_addresses_path(:user_id => user.id) %><br>

<% if user.get_cart? %>
	<%= link_to "View Unplaced Order (Cart)", admin_user_order_path(user.id, user.cart) %>
<% else %>
	<p>View Unplaced Order (Cart)</p>
<% end %>