<div class="row">
  <div class="col-xs-12 text-center">
    <h3>Demographic Information</h3>
  </div>
</div>

<div class="row">
    <div class="col-xs-12">
      <table class="table table-striped table-bordered">
        <tr>
          <td class="col-md-2">First Name</td>
          <td><%=@user.first_name%></td>
        </tr>
        <tr>
          <td class="col-md-2">Last Name</td>
          <td><%=@user.last_name%></td>
        </tr>
        <tr>
          <td class="col-md-2">Email</td>
          <td><%=@user.email%></td>
        </tr>
      </table>
     
      <h4>Default Shipping Address:</h4>
      <p><%=@user_info['shipping'].street_address%>, 
         <%=@user_info['shipping_city'].name%>,
         <%=@user_info['shipping_state'].name%> - 
         <%=@user_info['shipping'].zip_code%>
      </p>
      <br>
      <h4>Default Billing Address:</h4>
         <%=@user_info['billing'].street_address%>, 
         <%=@user_info['billing_city'].name%>,
         <%=@user_info['billing_state'].name%> - 
         <%=@user_info['billing'].zip_code%>
      </p>
    </div>
</div>

<div class="row">
  <div class="col-xs-4">
    <%= link_to "Edit #{@user.full_name}'s Information", edit_admin_user_path(@user.id) %>
  </div>
  <div class="col-xs-4">
    <%= link_to "View Saved Addresses", admin_user_addresses_path(@user.id) %>
  </div>
</div>

<div class="row">
  <div class="col-xs-4">
    <%= link_to "Delete #{@user.full_name}", admin_user_path(@user.id), method: "delete" %>
  </div>
  <div class="col-xs-4">
    <%= link_to "View Unplaced Orders", "#" %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <br>
    <h4>Credit Card Information</h4>
  
    <table class="table table-striped table-bordered">
      <tr>
        <td class="col-md-2">First Name</td>
        <td><%=@user.first_name%></td>
      </tr>
      <tr>
        <td class="col-md-2">Last Name</td>
        <td><%=@user.last_name%></td>
      </tr>
      <tr>
        <td class="col-md-2">Number</td>
        <td><%=@user_info['credit_card'].card_number%></td>
      </tr>
      <tr>
        <td class="col-md-2">Expiration</td>
        <td><%=@user_info['credit_card'].exp_year%>-<%=@user_info['credit_card'].exp_month%>
        </td>  
      </tr>
      <tr>
        <td class="col-md-2">CCV</td>
        <td><%=@user_info['credit_card'].ccv%></td>
      </tr> 
    </table>
    <%=link_to "Remove Credit Card", "#"%>
    <br><br>
    <h3>Admin Actions for <%=@user.full_name%></h3>
    <a class="btn btn-info btn-block" href=<%=new_admin_user_order_path(@user)%> role="button">
        Create Order
    </a>
    <a class="btn btn-info btn-block" href=<%=new_admin_user_address_path(@user.id)%> role="button">
        Create Address
    </a>
    <br>
    <%= render partial: 'user_orders' %>
  </div>  
</div>
<br>