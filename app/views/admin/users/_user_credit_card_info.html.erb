<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Credit Card Information</h3>
  </div>
  <div class="panel-body">
    <% @user.credit_cards.each do |cc| %>
      <div class="row">
        <div class="col-sm-2">
          <span class="h5">First Name:</span>
        </div>
        <div class="col-sm-10"><span><%= @user.first_name %></span></div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <span class="h5">Last Name:</span>
        </div>
        <div class="col-sm-10"><span><%= @user.last_name %></span></div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <span class="h5">Number:</span>
        </div>
        <div class="col-sm-10"><span><%= cc.card_number %></span></div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <span class="h5">Expiration:</span>
        </div>
        <div class="col-sm-10"><span><%= "#{cc.exp_month}/#{cc.exp_year}" %></span></div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <span class="h5">CCV:</span>
        </div>
        <div class="col-sm-10"><span><%= cc.ccv ? cc.ccv : '-' %></span></div>
      </div>
      <%= link_to 'Remove Card', admin_user_credit_card_path(@user, cc), method: :delete, data: {confirm: "Are you sure you want to delete this credit card?"} %>
    <% end %>
  </div>
</div>