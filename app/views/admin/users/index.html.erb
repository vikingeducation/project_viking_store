<h1 class='text-center'>Users</h1>
<br/>
<%= link_to "Add a New User", new_admin_user_path, class: 'btn btn-primary btn-lg btn-block' %>
<br/>
<table class='table table-bordered'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Joined</th>
      <th>City</th>
      <th>State</th>
      <th>Orders</th>
      <th>Last Order Date</th>
      <th>EDIT</th>
      <th>DELETE</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to "#{user.first_name} #{user.last_name}", admin_user_path(user.id) %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= user.billing_id.nil? ? "n/a" : user.billing_address.city.name %></td>
        <td><%= user.billing_id.nil? ? "n/a" : user.billing_address.state.name %></td>
        <td><%= user.completed_orders.count %></td>
        <td><%= user.last_checkout_date=="n/a" ?  "n/a" : user.last_checkout_date.strftime("%Y-%m-%d") %></td>
        <td><%= link_to "Edit", edit_admin_user_path(user.id) %></td>
        <td><%= link_to "Delete", admin_user_path(user), method: 'delete', data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
