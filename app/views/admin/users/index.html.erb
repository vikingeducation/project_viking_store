<H3>Viking Store Users</H3>

<div class="button-wrapper">
  <%= link_to("Create New User", new_admin_user_path, :class => "btn btn-primary btn-group btn-group-lg", :role => "group") %>
</div>

<div class="table-wrapper table-responsive">
  <table class="table table-striped">
    <caption></caption>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Joined</th>
        <th>City</th>
        <th>State</th>
        <th>Orders</th>
        <th>Order Date</th>
        <th>SHOW</th>
        <th>EDIT</th>
        <th>DELETE</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.first_name %> <%= u.last_name %></td>
          <td><%= u.joined_date %></td>
          <td><%= u.city_name %></td>
          <td><%= u.state_abbrev %></td>
          <td><%= link_to("#{u.orders.count}", admin_orders_path(:user_id => "#{u.id}")) %></td>
          <td><%= u.last_order_dated %></td>
          <td><%= link_to("show", admin_user_path(u.id)) %></td>
          <td><%= link_to("edit", edit_admin_user_path(u.id)) %></td>
          <td><%= link_to("delete", "/admin/users/#{u.id}", :method => "DELETE", data: {confirm: "Are you sure?"}) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>