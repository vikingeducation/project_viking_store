<h2 class="text-center">Viking Store Admin Portal</h2>

<div class="container">
  <div class="row">
    <%= render partial: 'shared/sidebar' %>

    <div class="col-sm-9">
      <h3 class="text-center">Viking Store Users</h3>
      <a class='btn btn-primary btn-block' role='button' href=<%=new_admin_user_path %> >Create A New User</a>

      <table class='table table-striped table-bordered'>
        <th>
          <td>ID</td>
          <td>Name</td>
          <td>Joined</td>
          <td>City</td>
          <td>State</td>
          <td>Orders</td>
          <td>Last Order Date</td>
          <td>Show</td>
          <td>Edit</td>
          <td>Delete</td>
        </th>
        
        <% @users.all.each do |user| %>
          <tr>
            <td></td>
            <td><%= user.id
             %></td>
            <td><%= user.full_name %></td>
            <td><%= user.created_at %></td>
            <td><%= user.default_shipping_address.city.name %></td>
            <td><%= user.default_shipping_address.state.name %></td>
            <td><%= user.orders.count %></td>
            <td>
              <% unless user.recent_checkout_date.is_a?(String) %>
                <%= user.recent_checkout_date.checkout_date %></td>
              <% else %>
                <%= user.recent_checkout_date %>
              <% end %>
            <td><%= link_to "show", admin_user_path(user) %></td>
            <td><%= link_to "edit", edit_admin_user_path(user) %></td>
            <td><%= link_to "delete", admin_user_path(user), method: :delete %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>



