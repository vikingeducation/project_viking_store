<h1 class="text-center">Edit User <%= @user.id %>: <%= @user.first_name %> <%= @user.last_name %></h1>


<div>

<%= form_for @user do |f| %>
  <%= render partial: 'form', locals: {f: f} %> 


  <div class="form-group">
    <%= f.label :default_billing_address %>
    <%= f.select :default_billing_address, all_addresses(@user), {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :default_shipping_address %>
    <%= f.select :default_shipping_address, all_addresses(@user), {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= link_to "View Saved Addresses", user_addresses_path(@user) %>
  </div>


  <div class="form-group">
    <%= f.submit "Update #{@user.first_name} #{@user.last_name}", class: "btn btn-primary btn-lg btn-block" %>
  </div>

<% end %>

  <div class="text-center">
    <%= link_to "Delete #{@user.first_name} #{@user.last_name}", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
  </div>


</div>