<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Demographic Information</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-2">
        <span class="h5">First Name:</span>
      </div>
      <div class="col-sm-10">
        <span><%= @user.first_name %></span>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <span class="h5">Last Name:</span>
      </div>
      <div class="col-sm-10">
        <span><%= @user.last_name %></span>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <span class="h5">Email:</span>
      </div>
      <div class="col-sm-10">
        <span><%= mail_to @user.email %></span>
      </div>
    </div>
    <div class="row mts">
      <div class="col-xs-12">
        <p class="h5">Default Billing Address:</p>
        <span><%= @user.print_billing_address %></span>
      </div>
    </div>
    <div class="row mts">
      <div class="col-xs-12">
        <p class="h5">Default Shipping Address:</p>
        <span><%= @user.print_shipping_address %></span>
      </div>
    </div>
    <div class="row mts">
      <div class="col-xs-12">
        <p><%= link_to "Edit #{@user.first_name} #{@user.last_name}'s information", edit_admin_user_path(@user) %></p>
        <p><%= link_to "Delete #{@user.first_name} #{@user.last_name}", admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?'} %></p>
        <p><%= link_to "View Saved Addresses", admin_user_addresses_path(@user) %></p>
        <p><%=  link_to_view_cart(@user) %></p>
      </div>
    </div>
  </div>
</div>