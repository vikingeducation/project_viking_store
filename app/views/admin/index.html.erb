<main id="admin" class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1 class="admin-header">Viking Store Admin Portal</h1><br />
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">

      <div class="row">

        <!-- top left -->
        <div class="col-sm-3">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="nav-header text-center">Navigation Options</h3>
            </div>
            <div class="panel-body text-center">
              <%= render partial: "nav_links" %>
            </div>
          </div>
        </div>

        <!-- top right -->
        <div class="col-sm-9">
          <div class="panel panel-primary">
            <div class="panel-heading text-center">
              <h3 class="content-header">Viking Store Users</h3>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <div class="panel-body">
                  <%= render partial: "admin_content" %>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>

</main>
