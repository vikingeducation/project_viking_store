<%= form_for [:admin, @product] do |product_field| %>
  <%= product_field.label :name, 'Name' %>
  <%= product_field.text_field :name %>

  <%= product_field.label :sku, 'SKU Number' %>
  <%= product_field.text_field :sku %>

  <%= product_field.label :description, 'Description' %>
  <%= product_field.text_area :description %>

  <%= product_field.label :price, 'Price' %>
  <%= product_field.text_field :price %>

  <%= product_field.label :category_id, 'Category ID' %>
  <%= product_field.text_field :category_id %>

  <%= product_field.submit %>
<% end %>