<div class="panel panel-default text-center">
  <div class="panel-heading">
    <h2>Products</h2>
  </div>
  <div class="panel-body">
    <%= link_to "Add a New Product", new_admin_product_path,
                :class => "btn btn-primary btn-block btn-lg" %>
    <br>

    <table class="table table-bordered">
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% @products.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.name %></td>
        <td><%= p.price %></td>
        <td><%= link_to p.category.name, admin_category_path(p.category_id) %></td>
        <td><%= link_to "Show", admin_product_path(p.id) %></td>
        <td><%= link_to "Edit", edit_admin_product_path(p.id) %></td>
        <td>
          <%= link_to "Delete",
                      admin_product_path(p.id),
                      :method => :delete,
                      :data => {:confirm => "Are you sure?"}
          %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
