<h1 class="text-center">Products</h1>

<br />
<%= link_to "Add a New Product", new_admin_product_path, class: "btn btn-primary btn-lg btn-block" %>
<br />


<%= will_paginate @products%>

</ul>

<div class="panel panel-default">

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>


    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= link_to category_name(product), admin_category_path( category_id(product)) %></td>
        <td><%= link_to "show", admin_product_path(product) %></td>
        <td><%= link_to "edit", edit_admin_product_path(product) %></td>
        <td><%= link_to "delete", admin_product_path(product), method: :delete, data: { confirm: "Are you sure you want to delete?" }  %></td>

      </tr>

    <% end %>

    </tbody>
  </table>

</div>


<%= will_paginate @products%>
