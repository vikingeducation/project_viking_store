<% @page_title = ' | Products' %>

<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<section>
  <header class="text-center">
    <h3>Products</h3>
  </header>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= link_to "Add a New Product", new_admin_product_path, :class => "btn btn-primary btn-lg center-block"%>
    </div>
  </div>

  <div class="stats-table">
    <table class="table table-striped">
      <tr>
        <% @column_headers.each do |header| %>
          <th><%= header %></th>
        <% end %>
      </tr>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td>$<%= product.price %></td>
          <td>
            <% if product.category_id %>
              <%= link_to product.category_name(product.category_id), admin_category_path(:id => product.category_id) %>
            <% else %>
                n/a
            <% end %>
          </td>
          <td>
            <%= link_to 'show', admin_product_path(:id => product.id) %>
          </td>
          <td>
            <%= link_to 'edit', edit_admin_product_path(:id => product.id) %>
          </td>
          <td>
            <%= link_to 'delete', 
                        admin_product_path(:id => product.id),
                        data: {:confirm => 'Are you sure?'}, 
                        :method => :delete %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</section>