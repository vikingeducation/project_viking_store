<h2 class="text-center">Products</h2>
<br>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <p>
      <%= link_to 'Add a New Product', new_admin_product_path, class: 'btn btn-primary btn-block' %>
    </p>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Category</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= link_to Category.find(product.category_id).name, admin_category_path(Category.find(product.category_id)) %></td>
            <td><%= link_to 'show', admin_product_path(product) %></td>
            <td><%= link_to 'edit', edit_admin_product_path(product) %></td>
            <td><%= link_to 'delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

