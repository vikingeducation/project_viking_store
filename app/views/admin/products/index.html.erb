<div class="container">
  <div class="row text-center">
    <h1>Viking Store Admin Portal</h1>
  </div>
  <div class="row">

    <div class="col-xs-2">
      <h4>Navigation Options</h4>
      <div><%= link_to "Users", admin_users_path %></div>
      <div><%= link_to "Addresses", admin_addresses_path %></div>
      <div><%= link_to "Orders", admin_orders_path %></div>
      <div><%= link_to "Products", admin_products_path %></div>
      <div><%= link_to "Categories", admin_categories_path %></div>
    </div>
    <div class="col-xs-10">
      <div class="text-center"><h2>Product</h2></div>
      <div class="col-xs-offset-3 col-xs-6">
        <%= link_to "Create Product", new_admin_product_path, class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <div class="col-xs-12 text-center">
        <div class="table-responsive scrollable-table">

          <table class="table table-striped">
            <tr>
              <td>ID</td>
              <td>Name</td>
              <td>Price</td>
              <td>Category</td>
              <td>Show</td>
              <td>Edit</td>
              <td>Delete</td>
            </tr>
            
            <% @products.each do |product| %>
              <tr>
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= product.price %></td>
                <td><%= link_to @product_categories[product.id-1].name, admin_category_path(@product_categories[product.id-1].id) %></td>
                <td><%= link_to "SHOW", admin_product_path(product) %></td>
                <td><%= link_to "EDIT", edit_admin_product_path(product) %></td>
                <td><%= link_to "DELETE", admin_product_path(product), method: :delete, data: {confirm: "Are you sure?"} %></td>
              </tr>
            <% end %>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>