<h2 class="text-center">Products</h2>

<a href="/products/new" class="btn btn-info create-btn">
  Create a New Product
</a>

<table>
  <tr>
    <th>Name</th>
    <th>SKU</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category</th>
    <th>SHOW</th>
    <th>EDIT</th>
    <th>DELETE</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.sku.to_i %></td>
      <td><%= product.description %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td>
        <% if product.category %>
          <%= link_to "#{product.category.name}", "/categories/#{product.category_id}" %>
        <% end %>
      </td>
      <td><%= link_to "show", admin_product_path(product.id) %></td>
      <td><%= link_to "edit", edit_admin_product_path(product.id) %></td>
      <td><%= link_to "delete", admin_product_path(product.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>
