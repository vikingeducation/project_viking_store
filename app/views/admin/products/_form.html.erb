<%= form_for [:admin, @product] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <%= render partial: 'error', locals: { column: 'Name', error_msg: @product.errors[:name] } %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
    <%= render partial: 'error', locals: { column: 'Description', error_msg: @product.errors[:description] } %>
  </div>
  <div class="form-group">
    <%= f.label :sku, 'SKU' %>
    <%= f.text_field :sku, class: "form-control" %>
    <%= render partial: 'error', locals: { column: 'SKU', error_msg: @product.errors[:sku] } %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price,  in: 1..10000, step: 0.01, class: "form-control", "aria-describedby": "priceHelp" %>
    <small id="priceHelp" class="form-text text-muted">Price must be between 1.00 - 10,000.00.</small>
    <%= render partial: 'error', locals: { column: 'Price', error_msg: @product.errors[:price] } %>
  </div>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {}, { class: "form-control" } %>
    <%= render partial: 'error', locals: { column: 'Category', error_msg: @product.errors[:category_id] } %>
  </div>
  <div class="text-right">
  <%= f.submit class: "btn btn-primary" %> 
  </div>
<% end %>