<div>


<% if @product.id %>
  <h3>Product ID: <%= @product.id %></h3>
<% else %>
  <h3>Product ID: N/A</h3>
<% end %>

<%= form_for [:admin, @product] do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= field_with_errors(@product, :name) %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= field_with_errors(@product, :price) %>
    <%= f.text_field :price, class: "form-control", placeholder: "$"  %>
  </div>

  <div class="form-group">
    <%= f.label :sku %>
    <%= field_with_errors(@product, :sku) %>
    <%= f.text_field :sku, class: "form-control", placeholder: "123-456-789" %>
  </div>


  <div class="form-group">
    <%= f.label :description %>
    <%= field_with_errors(@product, :description) %>
    <%= f.text_area :description, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category_id, Category.all.collect {|c| [c.name, c.id] }, {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary btn-lg btn-block" %>
  </div>


<% end %>
</div>
