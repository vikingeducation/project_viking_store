<% content_for :resource_name, "Products" %>

<h1 class="text-center">New Product</h1>

<div class="row">
  <div class="col-sm-12">
    <%= form_for [:admin,@product] do |f| %>
      <div class="form-group">
        <%= f.label :id, "ID" %>
        <%= f.text_field :id, class: 'form-control', placeholder: "N/A", disabled: true %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :sku %>
        <%= f.text_field :sku, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: 'selectpicker', data: { width: '100%' } %>
      </div>

      <%= f.submit class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
