<div class = "col-md-12">
  <h2>Product <%= @product.id %></h2>
</div>

<div class = "wrapper">

<div class = "row">
  <div class = "col-md-12">
    <h3>Product Information</h3>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <strong>Product ID:</strong>
  </div>
  <div class = "col-md-9">
    <span><%= @product.id %></span>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <strong>Name:</strong>
  </div>
  <div class = "col-md-9">
    <span><%= @product.name %></span>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <strong>Price:</strong>
  </div>
  <div class = "col-md-9">
    <span><%= number_to_currency(@product.price) %></span>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <strong>Category:</strong>
  </div>
  <div class = "col-md-9">
    <span><%= @product.category.name %></span>
  </div>
</div>

<div class = "row">
  <div class = "col-md-12">
    <h3>Product Statistics</h3>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <strong>Times Ordered:</strong>
  </div>
  <div class = "col-md-9">
    <span><%= @product_numorders %></span>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <strong>Carts In:</strong>
  </div>
  <div class = "col-md-9">
    <span><%= @product_numcarts %></span>
  </div>
</div>

<div class = "row">
  <div class = "col-md-12">
    <%= link_to "Edit Product", edit_admin_product_path(@product) %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-12">
      <%=link_to "Delete Product", admin_product_path(@product),
                  data: { confirm: "Are you sure?" }, method: :delete %>
  </div>
</div>


</div> <!--Container -->