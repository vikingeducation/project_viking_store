<h1 class="page-header text-center">Product <%= @product.id %>: <%= @product.name %></h1>

<h3>Product Information</h3>
<table class='table table-bordered'>
  <tr>
    <th>Product ID:</th>
    <td><%= @product.id %></td>
  </tr>
  <tr>
    <th>Name:</th>
    <td><%= @product.name %></td>
  </tr>
  <tr>
    <th>Price:</th>
    <td><%= number_to_currency(@product.price) %></td>
  </tr>
  <tr>
    <th>Category:</th>
    <td><%= @product.category.name %></td>
  </tr>
</table>
<h3>Product Statistics</h3>
<table class='table table-bordered'>
  <tr>
    <th>Times Ordered:</th>
    <td><%= @product.orders.count %></td>
  </tr>
  <tr>
    <th>Carts In:</th>
    <td><%= Product.number_of_carts(@product.id) %></td>
  </tr>
</table>
<%= link_to "Edit", edit_admin_product_path(@product.id), class: 'btn btn-primary btn-lg btn-block' %>
<br/>
<%= link_to "Delete", admin_product_path(@product.id), class: 'btn btn-danger btn-lg btn-block', method: "delete" %>
