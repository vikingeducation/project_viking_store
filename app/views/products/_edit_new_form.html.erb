<section>

  <header class="text-center">
    <h3><%= form_header %></h3>
  </header>

  <%= form_for object do |f| %>

  	<%= f.label :id, "ID: " %>
  	<%= f.text_field :id, :readonly => true %>
  	<br>
  	<br>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :price, "Price: $" %>
    <%= f.text_field :price %>
    <br>
    <br>
    <%= f.label :category_id, "Category: " %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, include_blank: true ) %>
    <br>
    <br>
    <%= f.submit submit_label %>

    <% if delete_option %>
      <%= link_to 'Delete', object, data: {:confirm => "Are you sure?"}, :method => :delete %>
    <% end %>

  <% end %>

</section>