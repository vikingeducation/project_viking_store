<%= form_for product do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :sku %>
	<%= f.text_field :sku %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.label :price %>
	<%= f.text_field :price %>

	<%= f.label :category_id %>
	<%= f.text_field :category_id %>
	<%= f.submit "Submit!" %>
<% end %>
