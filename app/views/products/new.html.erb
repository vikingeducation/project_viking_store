<h2>Create a New Product</h2>

<div class="row">
  <div class="col-xs-3">
    <%= form_for @product do |f| %>
    <%= f.label :id, "ID: " %><br><br>
    <%= f.label :name, "Name: " %><br><br>
    <%= f.label :price, "Price: " %><br><br>
    <%= f.label :category_id, "Category: " %>
  </div>
  <div class="col-xs-9">
    <%= @product.id || "N/A" %><br><br>
    <%= field_error_message(@product, :name) %>
    <%= f.text_field :name %><br><br>
    <%= field_error_message(@product, :price) %>
    $<%= f.number_field(:price, {in: 0.01..10000.00, step: 0.01}) %>($0.00-$10,000.00)<br><br>
    <%= field_error_message(@product, :category_id) %>
    <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true %>

  </div>
  <div class="col-xs-10 col-xs-offset-1">
    <%= f.submit "Create", :class => "btn btn-primary btn-lg btn-block", :id => "new-resource-button"  %>
    <%end%>
  </div>

</div>
