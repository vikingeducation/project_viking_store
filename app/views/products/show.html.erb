<header class="page-header">
  <h1>
    Product:
    <small>
      <%= @product.name %>
    </small>
  </h1>
</header>

<%= render @product %>

<%= render :partial => 'shared/edit_delete_buttons', :locals => {
  :resource => 'Product',
  :edit_path => edit_product_path(@product),
  :delete_path => product_path(@product)
} %>

<h2>Stats</h2>
<%= render :partial => 'shared/table', :locals => {:table => {
  :headers => ['Key', 'Value'],
  :rows => [
    ['Orders', @product.orders.length],
    ['Shopping Carts', @product.carts.length],
    ['Placed Orders', @product.placed_orders.length],
    ['Sold Units', @product.units_sold]
  ]
}} %>