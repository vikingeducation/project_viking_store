<% content_for :title do %>
  <title>Viking Store Admin Portal</title>
<% end %>

<div class="row">
  <div class="col-md-9 main-content">
    <h2 class="text-center">Product <%=@product.id %> </h2>


    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <h3>Product Information</h3>
        </tr>
        <tr>
          <td><strong>ID</strong></td>
          <td><%=@product.id %></td>
        </tr>
        <tr>
          <td><strong>Name</strong></td>
          <td><%=@product.name %></td>
        </tr>
        <tr>
          <td><strong>Price</strong></td>
          <td><%=@product.price %></td>
        </tr>
        <tr>
          <td><strong>Category</strong></td>
          <td><%=@product.category.name %></td>
        </tr>
        <br />
        <tr>
          <h3>Product Statistics</h3>
        </tr>
        <tr>
          <td><strong>Times Ordered</strong></td>
          <td><%=@product.order_contents.reduce(0) {|sum, oc| sum + oc.quantity } %></td>
        </tr>
        <tr>
          <td><strong>Carts In</strong></td>
          <td><%=@product.order_contents.length %></td>
        </tr>
          
      </tbody>
    </table>
    <p><%= link_to "Edit Product", edit_product_path(@product) %></p>
    <p><%= link_to "Delete Product", product_path(@product),
                      data: { confirm: "Are you sure?" },
                      method: :delete %></p>

  </div>
</div>