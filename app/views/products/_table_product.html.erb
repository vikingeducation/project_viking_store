<table class="table table-bordered table-striped table-user">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>SKU</th>
		<th>Description</th>
		<th>Price</th>
		<th>Category</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% @products.each do |product| %>
		<tr>
			<td><%= link_to "#{product.id}", product_path(product.id) %></td>
			<td><%= product.name %></td>
			<td><%= product.sku %></td>
			<td><%= product.description %></td>
			<td><%= "$#{product.price}" %></td>
			<% if product.category_id %>
				<td><%= link_to "#{product.category.name}", category_path(product.category_id) %></td>
			<% else %>
				<td><%= "" %></td>
			<% end %>
			<td><%= link_to "Edit", edit_product_path(product.id) %></td>
			<td><%= link_to "Delete", product_path(product.id), method: "delete", data: {confirm: "Do you really want to delete?"} %></td>
		</tr>
	<% end %>
</table>