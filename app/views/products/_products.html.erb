
<div class="col-sm-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= product.name %></h3>
    </div>
    <div class="panel-body">
      <img src="" width = "150px" height = "150px" alt="<%= product.name %>">
      <span class="pull-right"><%= number_to_currency(product.price) %>
    </div>
     <div class="panel-footer text-center"><%= link_to "Add to Cart", carts_products_path(product_id: product) %></div>
  </div>
</div>

