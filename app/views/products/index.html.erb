<div class="header-wrapper container-fluid">
  <div class="row main-title"><h1>The Viking Store</h1></div>
  <div class="row sub-title"><h2>The Best Viking Gear on the Whole Web</h2></div>
  <div class="row catalog-header">Choose from among our lineup of fine items below</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-8 text-right category-filter">
      <%= form_tag('/products', method: :get, class: 'form-inline') do |f| %>
        <div class="form-group">
          <%= label_tag 'category', 'Categories', class: 'sr-only' %>
          <%= select_tag "category", options_from_collection_for_select(@categories, "id", "name", @category.nil? ? '' : @category.id), include_blank: "All Categories" %>
        </div>
          <%= submit_tag 'Apply Filter', name: nil, class: "btn btn-primary"  %>
      <% end %>
        
    </div>
  </div>

  <div class="row">
    <%= render @products %>
  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
