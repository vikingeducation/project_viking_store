<div class="row">
  <div class="col-xs-12">
    <h1>Products</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to "New", new_product_path, class: "btn-primary btn col-xs-4 col-xs-offset-4" %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
  </div>
</div>

<div class="row">
  <%= render 'layouts/navbar' %>

  
  
  <table class="table-bordered col-xs-8 col-xs-offset-1">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
    </tr>
    <% @products.each do |product| %>
      <% category = product.category %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= link_to category.name, category_path(category.id) unless category.nil? %></td>
        <td><%= link_to "Show", product_path(product.id) %>
        <td><%= link_to "Edit", edit_product_path(product.id) %></td> 
        <td><%= link_to "Delete", product_path(product.id), method: "delete", data: { confirm: "Are you sure?"}  %>
        </td>
      </tr>
    <% end %>
  </table>

    

</div>
