<p class="right"><%= link_to 'New', new_product_path %></p>
<h1>Products</h1>

<table class="<%= table_classes %>">
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to product.name, product %><br>
          <span class="sku-display">SKU: <%= product.sku %></span>

        </td>
        <td><%= product.price %></td>
        <td><%= link_to product.category_name, category_path(product.category) %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
