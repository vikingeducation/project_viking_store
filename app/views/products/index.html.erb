<% content_for :title do %>
  <title>Viking Store Admin Portal</title>
<% end %>
<div class="row">
  <h1 class="text-center">Viking Store Admin Portal</h>
</div>
<div class="row">
  <%= render partial: "shared/admin_navbar" %>
   
  <div class="col-md-9 main-content">
    <h2 class="text-center">Products</h2>
    <p><%= link_to "Add a New Product", "#", class: "btn btn-primary btn-lg btn-block" %></p>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <td><strong>ID</strong></td>
          <td><strong>Name</strong></td>
          <td><strong>Price</strong></td>
          <td><strong>Category</strong></td>
          <td><strong>SHOW</strong></td>
          <td><strong>EDIT</strong></td>
          <td><strong>DELETE</strong></td>
        </tr>
      </thead>
      <tbody>
         <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.category_id %></td>
            <td><%= link_to "show", product_path(product) %></td>
            <td><%= link_to "edit", edit_product_path(product) %></td>
            <td><%= link_to "delete", product_path(product),
                      data: { confirm: "Are you sure?" },
                      method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>