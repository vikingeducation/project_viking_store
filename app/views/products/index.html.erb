<div class = 'container'>

    <div class='col-md-3'>
        <%= render partial: "/edits/editbar"%>
    </div>
    <div class = 'col-md-9'>
    <%= link_to "Creat A New One", new_product_path,
                         :class => "btn btn-primary btn-lg" %>
      <hr>
      <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>SKU</th>
                    <th>Show details</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            <%@products.each do |product|%>
                <tr>
                    <td><%= product.name%></td>
                    <td><%= product.sku%></td>
                    <td>
                       <%= link_to "Details", product_path(product),
                         :class => "btn btn-default" %>
                    </td>
                    <td>
                        <%= link_to "Edit", edit_product_path(product),
                         :class => "btn btn-default" %>
                    </td>
                    <td>
                        <%= link_to "Delete", product,
                         :class => "btn btn-danger",
                         :data => {:confirm => 'Are you sure?',
                          :method => :delete} %>
                    </td>
                </tr>
             <%end%>
             </tbody>
      </table>
      </div>

</div>