<h3>
  Edit this product
</h3>

<!-- collection_select(:post, :author_id, Author.all, :id, :name_with_initial, prompt: true) -->

<%= form_for @product do |f| %>

  ID: <%= @product.id %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :category_id %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>

  <%= f.submit %>
<% end %>

<%= link_to "Delete this product", product_path(@product.id), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-default" %>