<div class="row">
  <div class="col">
    <h2 class="text-center">Edit Product <%= @product.id %></h2>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-10 border mt-2 mb-4">

    <%= form_for @product do |f| %>
      <div class="form-group form-row mt-2">
        <div class="col-4">
          <%= f.label :id, "Product ID", class: "col-form-label font-weight-bold" %>
        </div>
        <div class="col">
          <%= f.text_field :id, class: "form-control-plaintext" %>
        </div>
      </div>

      <div class="form-group form-row">
        <div class="col-4">
          <%= f.label :name, class: "col-form-label font-weight-bold" %>
        </div>
        <div class="col">
          <div class="form-row">
            <div class="col">
              <%= field_with_errors(@product, :name) %>
            </div>
          </div>
          <div class="form-row">
            <div class="col">
              <%= f.text_field :name, class: "form-control", placeholder: "Enter a product name" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group form-row">
        <div class="col-4">
          <%= f.label :sku, "SKU", class: "col-form-label font-weight-bold" %>
        </div>
        <div class="col">
          <div class="form-row">
            <div class="col">
              <%= field_with_errors(@product, :sku) %>
            </div>
          </div>
          <div class="form-row">
            <div class="col">
              <%= f.text_field :sku, class: "form-control", placeholder: "Enter a product SKU" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group form-row">
        <div class="col-4">
          <%= f.label :price, class: "col-form-label font-weight-bold" %>
        </div>
        <div class="col">
          <div class="form-row">
            <div class="col">
              <%= field_with_errors(@product, :price) %>
            </div>
          </div>
          <div class="form-row">
            <div class="col">
              <%= f.text_field :price, class: "form-control", placeholder: "$price" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group form-row">
        <div class="col-4">
          <%= f.label :category_id, "Category", class: "col-form-label font-weight-bold" %>
        </div>
        <div class="col">
          <div class="form-row">
            <div class="col">
              <%= field_with_errors(@product, :category_id) %>
            </div>
          </div>
          <div class="form-row">
            <div class="col">
              <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a Category" }, { class: "form-control" } %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group form-row">
        <div class="col">
          <%= f.submit "Update Product", method: :post, class: "btn btn-primary btn-lg btn-block border rounded mt-4 mb-2" %>
        </div>
      </div>

      <div class="form-group form-row">
        <div class="col text-center">
          <%= link_to "Delete Product", "#" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
