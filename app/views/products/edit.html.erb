<section id='product-edit'>

  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <h1 class='text-center'><%= "Edit Product #{@product.id}" %></h1>

    </div>
  </div>


  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>

      <%= render :partial => 'product_form',
            :locals => {
              :product => @product,
              :available_categories => @available_categories,
              :button_label => 'Update' } %>

    </div>
  </div>


  <div class='row'>
    <div class='col-xs-12 text-center '>

      <%= link_to 'Delete Product', product_path(@product.id),
            :method => :delete,
            :data => { :confirm => 'Delete product?' } %>

    </div>
  </div>


</section>