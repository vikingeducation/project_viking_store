<h1>Edit Product</h1>
<% unless flash[:error].nil? %>
  <div class="alert alert-danger"><%= flash[:error] %></div>
<% end %>

<%= form_for @product do |f| %>
  <%= f.label :id %>
  <%= f.text_field :id, disabled: true %><br/>

  <%= @product.errors[:name].first unless @product.errors[:name].nil?  %><br/>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>

  <%= @product.errors[:description].first unless @product.errors[:description].nil? %><br/>
  <%= f.label :description %>
  <%= f.text_area :description %><br/>

  <%= @product.errors[:sku].first unless @product.errors[:sku].nil? %><br/>
  <%= f.label :sku %>
  <%= f.text_area :sku %><br/>

  <%= @product.errors[:price].first unless @product.errors[:price].nil? %><br/>
  <%= f.label :price %>
  <%= f.number_field :price, :step => 'any' %><br/>

  <%= @product.errors[:category_id].first unless @product.errors[:category_id].nil? %><br/>
  <%= f.label :category_id %>
  <%= f.select :category_id, Category.all.map { |category| [category.name, category.id] }, include_blank: true %>

  <%= f.submit %>
<% end %>
<p><%= link_to "Delete", product_path(@product.id), method: "DELETE", data: {confirm: "Are you sure?"} %></p>