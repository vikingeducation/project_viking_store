<div class='container'>

  <h1 class='text-center'>Shopping Cart Contents</h1>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <section id="edit-panel">


        <%= form_for [current_user, @order] do |order_fields| %>

          <%= order_fields.fields_for :order_contents do |content_fields| %>

            <%= render :partial => 'order_contents', :locals => { :content_fields => content_fields } %>

          <% end %>


          <div class='row'>

            <div class='col-xs-6 col-xs-offset-1'>

              <div class='row product-panel text-center'>
                <div class='col-xs-12'>
                  <h4><strong>TOTAL</strong></h4>
                  <h3><%= number_to_currency(@order.calculate_order_value) %></h3>
                </div>
              </div>

            </div>


            <div class='col-xs-4'>
              <%= order_fields.submit 'Update Contents', class: 'btn btn-default btn-lg btn-block' %>
              <%= link_to 'Check Out', '#', class: 'btn btn-primary btn-lg btn-block' %>
            </div>

          </div>

        <% end %>



      </section>

    </div>
  </div>


</div> <!-- container -->
