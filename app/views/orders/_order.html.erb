<%= render :partial => 'shared/table', :locals => {:table => {
  :headers => ['Key', 'Value'],
  :rows =>[
    ['ID', order.id],
    ['User', link_to(order.user.name, user_path(order.user))],
    ['Checkout Date', order.checkout_date ? order.checkout_date.to_formatted_s(:long) : '-'],
    ['Shipping Address', order.shipping ? link_to(order.shipping.full_address, address_path(order.shipping)) : '-'],
    ['Billing Address', order.billing ? link_to(order.billing.full_address, address_path(order.billing)) : '-'],
    ['Credit Card', order.credit_card ? order.credit_card.name : '-'],
    ['Created At', order.created_at.to_formatted_s(:long)],
    ['Updated At', order.updated_at.to_formatted_s(:long)]
  ]
}} %>
