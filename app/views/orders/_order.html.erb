<table>
  <tr>
    <th>ID</th>
    <th>Order Date</th>
    <th>Order Value</th>
    <th>Status</th>
    <th>SHOW</th>
    <th>EDIT</th>
    <th>DELETE</th>
  </tr>
  <tr>
    <td><%= order.id %></td>
    <td><%= order.created_at %></td>
    <td><%= order.value %></td>
    <td><%= order.status %></td>
    <td><%= link_to "show", order_path(order) %></td>
    <td><%= link_to "edit", edit_order_path(order) %></td>
    <td><%= link_to "delete", order_path(order), method: :delete %></td>
  </tr>
</table>