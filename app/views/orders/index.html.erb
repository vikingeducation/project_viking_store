<div class="row">
  <div class = "col-md-12">
    <h2>
      <%= @user ? "#{@user.first_name} #{@user.last_name}'s" : "All" %> Orders
    </h2>
  </div>
</div>

<div class="row">
  <div class = "col-md-12">
    <% if @user %>
      <%= link_to "Create an Order for #{@user.first_name} #{@user.last_name}",
        new_order_path, class: "btn btn-primary btn-lg btn-block btn-create"%>
    <% else %>
      <p>Create new orders from within <%= link_to "User", users_path %></p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class = "col-md-12">

    <table class = "table table-striped table-bordered">

      <%= render "order_thead" %>

      <% if @user %>

        <%= render "user_orders_tbody" %>

      <% else %>

        <%= render "order_tbody" %>

      <% end %>

    </table>
  </div>
</div>
