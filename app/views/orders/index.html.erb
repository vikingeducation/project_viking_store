<div class="row">
  <div class="col">
    <h2 class="text-center">
      <% if @user %>
        <%= "#{@user.first_name} #{@user.last_name}'s Orders" %>
      <% else %>
        All Orders
      <% end %>
    </h2>
  </div>
</div>

<div class="row">
  <div class="col text-center">
    <% if @user %>
      <%= button_to "Create an Order for #{@user}", { action: "new" }, { method: :get, class: "btn btn-primary btn-lg btn-block border rounded mt-4", params: { user_id: @user.id} }%>
    <% else %>
      <span class="font-italic">Create new Orders from within <%= link_to "User", users_path %> profiles</span>
    <% end %>
  </div>
</div>

<div class="row mt-4">
  <div class="col">

    <table class="table table-striped table-sm">

      <thead>
        <tr>
          <th>ID</th>
          <th>User ID</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Total Value</th>
          <th>Status</th>
          <th>Date Placed</th>
          <th>SHOW</th>
          <th>EDIT</th>
          <th>DELETE</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= link_to order.user.id, user_path(order.user) %></td>

            <% if order.shipping_address %>
              <td><%= order.shipping_address.street_address %></td>
              <td><%= order.shipping_address.city.name %></td>
              <td><%= order.shipping_address.state.to_s %></td>
            <% else %>
              <td>N/A</td>
              <td>N/A</td>
              <td>N/A</td>
            <% end %>

            <td><%= number_to_currency(order.value) %></td>
            <td><%= order.status %></td>
            <td><%= order.checkout_date ? order.checkout_date.strftime("%Y-%m-%d") : "N/A" %></td>
            <td><%= link_to "show", "#" %></td>
            <td><%= link_to "edit", "#" %></td>
            <td><%= link_to "delete", "#" %></td>
          </tr>
        <% end %>
      </tbody>

    </table>

  </div>
</div>
