<div class="container">
  <div class="row text-center">
    <h1>Viking Store Admin Portal</h1>
  </div>
  <div class="row">

    <div class="col-xs-2">
      <h4>Navigation Options</h4>
      <div><a href="#">Users</a></div>
      <div><a href="#">Addresses</a></div>
      <div><a href="#">Orders</a></div>
      <div><a href="#">Products</a></div>
      <div><a href="#">Categories</a></div>
    </div>

    <div class="col-xs-10">
      <% if defined?(@user) %>
        <div class="text-center">
          <h2><%= @user.first_name %> <%= @user.last_name %>'s order</h2>
          <%= link_to "Create #{@user.first_name} #{@user.last_name}'s order", new_user_order_path(@user), class: "btn btn-primary btn-lg" %>
        </div>
      <% else %>
        <div class="text-center">
          <h2>Orders</h2>
        </div>
        <div class="col-xs-offset-3 col-xs-6">
          Create a new orders from within
          <%= link_to "User" %>
          profiles
        </div>
      <% end %>
      <div class="col-xs-12 text-center">
        <div class="scrollable-table">
          <table class="table table-striped">
            <tr>
              <td>ID</td>
              <td>UserID</td>
              <td>Address</td>
              <td>City</td>
              <td>State</td>
              <td>Total Value</td>
              <td>Date Placed</td>
              <td>Status</td>
              <td>SHOW</td>
              <td>EDIT</td>
              <td>DELETE</td>
            </tr>
            
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.id %></td>
                <td><%= order.user_id %></td>
                <td><%= order.shipping_add.street_shipping_add %></td>
                <td><%= order.shipping_add.city.name %></td>
                <td><%= order.shipping_add.state.name %></td>
                <td><%= order.total_value %></td>
                <td><% if order.checkout_date.nil? %>
                      UNPLACED
                    <% else %>
                      PLACED
                    <% end %>
                </td>
                <td><%= order.created_at.strftime("%y-%m-%d") %></td>
                <td><%= link_to "SHOW", user_order_path(order.user_id, order) %></td>
                <td><%= link_to "EDIT", edit_user_order_path(order.user_id, order) %></td>
                <td><%= link_to "DELETE", user_order_path(order.user_id, order), method: :delete, data: {confirm: "Are you sure?"} %></td>
              </tr>
            <% end %>
          </table>
        </div>

        <div class
      </div>
    </div>
  </div>
</div>