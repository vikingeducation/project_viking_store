<%= render partial: 'shared/admin_header' %>
<div class="container">

  <div class="row">
    <%= render partial: 'shared/nav' %>

    <article class="col-sm-9">  

      <% if in_cart?(@order) %>
        <h2 class="text-center">Shopping Cart</h2>
      <% else %>
        <h2 class="text-center">Order <%=@order.id %></h2>
      <% end %>
        <br>

       <section class="col-sm-10 col-sm-offset-1">
          <h3 class="text-center">Logistical Information</h3>
          <%= render partial: 'basic_info', locals: { order: @order } %>
          <%= render partial: 'address_info', locals: { order: @order } %>
        </section> 

        <section class="col-sm-10 col-sm-offset-1">
        <%= render partial: 'order_contents_table', locals: { order: @order } %>
        </section>    
    </article>

  </div>
  
</div>
