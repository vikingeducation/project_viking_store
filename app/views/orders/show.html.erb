<div class = 'container'>
  <div class = 'col-md-3'>
  </div>
  <div class = 'col-md-6'>

    <h1>Order ID <%= @order.id%></h1>
    <h2><%= @definition[0]%></h2>



    <h2>logistic Information</h2>
    <h3>Basic Information</h3>
    <h4>User ID: <%= @user.id%></h4>
    <h4>Customer: <%= @user.first_name%>  <%= @user.last_name%></h4>
    <h4>Date Placed: <%= @order.created_at%></h4>
    <h4>Product Value: <%= @value%></h4>
    <h4>Quantity: <%= @quantity%></h4>



    <%= link_to "Edit User Information",
    user_path(@user),
    :class => "btn btn-default" %>
    <h2>Order Status: <%= @definition[1]%></h2>


    <h3>Shipping Address</h3>
    <h4>Street:    <%=@order.shipped_address.street_address%></h4>
    <h4>City:    <%=@order.shipped_address.city.name%></h4>
    <h4>State:    <%=@order.shipped_address.state.name%></h4>



    <h3>Billing Address</h3>
    <h4>Street:    <%=@order.billed_address.street_address%></h4>
    <h4>City:    <%=@order.billed_address.city.name%></h4>
    <h4>State:    <%=@order.billed_address.state.name%></h4>



    <h3>Billing information</h3>
    <h4>Last 4 numbers: <%=@order.credit_card.card_number.split(//).last(4).join() if @order.credit_card!= nil%></h4>
    <%= link_to "Edit Order",
      user_path(@user),
      :class => "btn btn-default" %>
    <%= link_to "Delete Order",
      user_path(@user),
      :class => "btn btn-default" %>


    <h3>Order Contents</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        <%@contents.each do |content|%>
        <tr>
          <td><%=content.product.name%></td>
          <td><%=content.quantity%></td>
        </tr>
        <%end%>
      </tbody>
    </table>


    <%= link_to "Edit Order Contents",
    user_path(@user),
    :class => "btn btn-default" %>
    <%= link_to "Delete Order Contents",
    user_path(@user),
    :class => "btn btn-default" %>
    <%= link_to "OK and return",orders_path(@order) ,
     :class => "btn btn-info" %>
    <hr>
  </div>
</div>