<h1> Logistical Information </h1>

<%= render partial: "orders/basic_info", locals: {order: @order} %>

<h3> Number of Products:<%= @order.products.count %> </h3>
<h3> Order Value:<%= number_to_currency(@order.value) %> </h3>
<%= link_to "Edit Customer Profile", edit_user_path(@order.user) %>

<h2> Order Status </h2>
<p><%= @order.status %></p>

<h2> Shipping Address </h2>
  <p>Street Address: <%= @order.shipping.street_address %></p>
  <p>State: <%= @order.shipping.state.name %></p>
  <p>City: <%= @order.shipping.city.name %></p>
<h2> Billing Address </h2>
  <p>Street Address: <%= @order.billing.street_address %></p>
  <p>State: <%= @order.billing.state.name %></p>
  <p>City: <%= @order.billing.city.name %></p>
<br>

<% if @order.user.credit_cards.any? %>
	<h3> Billing Card </h3>
	<p> Last 4 digits: <%= @order.user.credit_cards.first.card_number %></p>
<% end %>

<h5><%= link_to "Edit this order's information.", edit_order_path(@order) %></h5>
<h5><%= link_to "Delete this order.", @order, method: 'delete' %></h5>

<%= render partial: "orders/contents", locals: {order: @order} %>


