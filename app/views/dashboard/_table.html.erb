<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t[:title] %></h3>
  </div>

  <table class="table">
    <thead>
      <tr>
        <% t[:headers].each do |header| %>
          <th><%= header %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>

      <% t[:rows].each do |row| %>
        <tr>
          <% row.each do |value| %>
            <td><%= value %></td>
          <% end %>
        </tr>
      <% end %>

    </tbody>
  </table>

</div>