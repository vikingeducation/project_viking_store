<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr class="info">
      <th class="text-center">Item</th>
      <th class="text-center">Data</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Users</td>
      <td class="text-right"><%= number_to_human stats[:num_users] %></td>
    </tr>
    <tr>
      <td>Orders</td>
      <td class="text-right"><%= number_to_human stats[:num_orders] %></td>
    </tr>
    <tr>
      <td>Products</td>
      <td class="text-right"><%= number_to_human stats[:num_products] %></td>
    </tr>
    <tr>
      <td>Revenue</td>
      <td class="text-right"><%= number_to_currency stats[:total_revenue], precision: 0 %></td>
    </tr>
  </tbody>
</table>