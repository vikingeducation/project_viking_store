<h1>Dashboard#show</h1>
<p>Find me in app/views/dashboard/show.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Overall Platform</h1>
      <div class="table-responsive">
        <table class="table">
          <%= content_tag :h3, "Last 7 days" %>
          <% @aggregates[:last_seven_days].each do |k,v| %>
            <%= content_tag :tr do %>
              <%= content_tag :td, k %>
              <%= content_tag :td, v %>
            <% end %>
          <% end %>
        </table>
      </div>

      <div class="table-responsive">
        <table class="table">
          <%= content_tag :h3, "Last 30 days" %>
          <% @aggregates[:last_thirty_days].each do |k,v| %>
            <%= content_tag :tr do %>
              <%= content_tag :td, k %>
              <%= content_tag :td, v %>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>

    <div class="col-md-6">
      <h1>User Demographic and Behavior</h1>
      <div class="table-responsive">
        <table class="table">
          <%= content_tag :h3, "Top 3 States Users Live In (billing)" %>
          <% @demographics[:top_three_states].each do |state| %>
            <%= content_tag :tr do %>
              <%= content_tag :td, state.name %>
              <%= content_tag :td, state.num_from_each_state %>
            <% end %>
          <% end %>
        </table>
      </div>

      <div class="table-responsive">
        <table class="table">
          <%= content_tag :h3, "Top 3 Cities Users Live In (billing)" %>
          <% @demographics[:top_three_cities].each do |city| %>
            <%= content_tag :tr do %>
              <%= content_tag :td, city.name %>
              <%= content_tag :td, city.num_from_each_city %>
            <% end %>
          <% end %>
        </table>
      </div>

      <div class="table-responsive">
        <table class="table">
          <%= content_tag :h3, "Top Users With.." %>
          <% @demographics[:top_users_with].each do |k,v| %>
            <%= content_tag :tr do %>
              <%= content_tag :td, k %>
              <%= content_tag :td, v %>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>User Demographic and Behavior</h1>
      <div class="table-responsive">
        <table class="table">
          <%= content_tag :h3, "Last Seven Days" %>
          <% @order_stats[:last_seven_days].each do |k,v| %>
            <%= content_tag :tr do %>
              <%= content_tag :td, k %>
              <%= content_tag :td, v %>
            <% end %>
          <% end %>
        </table>
      </div>
      <div class="table-responsive">
        <table class="table">
          <%= content_tag :h3, "Last Thirty Days" %>
          <% @order_stats[:last_thirty_days].each do |k,v| %>
            <%= content_tag :tr do %>
              <%= content_tag :td, k %>
              <%= content_tag :td, v %>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>