    <h3> 2. User Demographics and Behavior </h3>

    <div class="col-xs-6">
      <h4> Top 3 States Users Live In (billing) </h4>
      <table class="table">
        <thead>
          <tr>
            <th>Item</th>
            <th>Data</th>
          </tr>
        </thead>
        <tbody>
          <% @top_states.each do |state| %>
            <tr>
              <td>
                <%= state[0] %>
              </td>
              <td>
                <%= state[1] %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>

      <h4> Top 3 Cities Users Live In (billing) </h4>
      <table class="table">
        <thead>
          <tr>
            <th>Item</th>
            <th>Data</th>
          </tr>
        </thead>
        <tbody>
          <% @top_cities.each do |state| %>
            <tr>
              <td>
                <%= state[0] %>
              </td>
              <td>
                <%= state[1] %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>

