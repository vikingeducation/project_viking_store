<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>

    <h4><%= table_title %></h4>


    <table class='table table-striped table-bordered table-condensed'>

      <thead class='bg-primary'>
        <tr>
          <% table_headers.each do |header| %>
            <td><%= header %></td>
          <% end %>
        </tr>
      </thead>


      <tbody>

        <% table_data.each do |label, data| %>
          <tr>

            <td><%= label %></td>

            <% pretty_present(data).each do |cell| %>
              <td><%= currency_if_float(cell) %></td>
            <% end %>


          </tr>
        <% end %>

      </tbody>

    </table>

  </div> <!-- col -->

</div> <!-- row -->