<!DOCTYPE html>
<html>
<head>
  <title>Viking Store</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-12-md centered">
        <h1>
          Viking Store Admin Portal
        </h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= render "admins/navbar" %>
      </div>
      <div class="col-md-9">
        <% flash.each do |name, message| %>
          <%= content_tag :div, message, class: "alert alert-info" %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>