<!DOCTYPE html>
<html>
  <head>
    <title>The Viking Store</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <div class='container-fluid'>

      <nav id='storefront-navbar' class='navbar navbar-default'>

        <div class='row'>

          <div class="col-xs-6 col-xs-offset-1">
            <h1><%= link_to 'Viking Store', root_path %></h1>
          </div>

          <div class="col-xs-4">
            <div class='row'>

              <div class='col-xs-6 text-right'>
                <%= image_tag "icon_empty_cart.png", size: "32x32" %>
              </div>

              <div class='col-xs-6'>
                <div class='row'>
                  <div class='col-xs-12'>
                    <!-- application helper -->
                    <%= link_to "Your Cart", cart_link %>
                  </div>
                </div>

                <div class='row'>
                  <div class='col-xs-12'>
                    <%= user_sign_in_out %>
                    <%= link_to current_user.email, edit_user_path(current_user) if current_user %>
                  </div>
                </div>
              </div>

            </div>

          </div> <!-- links column -->


        </div> <!-- nav row -->

      </nav>

    </div> <!-- nav container -->

    <%= bootstrap_flash %>

    <%= yield %>

    <div class="container-fluid">

      <footer id='storefront-footer'>

        <div class='row'>
          <div class='col-xs-11 text-right'>
            <%= link_to "Admin Login", "#" %>
          </div>
        </div>

        <div class='row'>
          <div class='col-xs-12 text-center'>
            <h4 class='contact-title'>CONTACT</h4>
          </div>
        </div>

        <div class='row'>
          <div class='col-xs-12 text-center'>
            <%= image_tag "icon_phone_white.png", size: "32x32" %>
            1 - 000 - 000 - 000
          </div>
        </div>

        <div class='row'>
          <div class='col-xs-12 text-center'>
            <%= image_tag "email_white.png", size: "32x32" %>
            contact@vikingstore.com
          </div>
        </div>

      </footer>

    </div> <!-- footer container -->

  </body>


</html>