<!DOCTYPE html>
<html>
	<head>
	  <title>The Viking Store <%= @page_title %></title>
	  <%= stylesheet_link_tag    'application', media: 'all' %>
	  <%= javascript_include_tag 'application' %>
	  <%= csrf_meta_tags %>

	  <!-- Meta Stuff -->
	  <meta charset="utf-8">

	  <!-- Bootstrap CSS -->
	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

	  <!-- jQuery -->
	  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

	  <!-- Bootstrap Javascripts -->
	  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	</head>
	<body>

		<nav id="topnav" class="navbar navbar-default">
		  <div class="logo-container">
		    <img class="pull-left" src="http://seeklogo.com/images/V/v-tele-logo-053AACAF21-seeklogo.com.gif">
		    <a class="navbar-brand" href="/admin/categories">
		      The Viking Store
		    </a>
		  </div>
		</nav>

		<main class="container">

			<div class="row">
	      <div class="col-lg-12 text-center ">
	        <header>
	          <h1>Viking Store Admin Portal</h1>
	        </header>
	      </div>
	    </div>

	    <div class="row">
	    	<div class="col-lg-2">
		    	<div class="side-nav">
		    		<h6>Navigation Options</h6>
		    		<ul>
		    			<li><%= link_to 'Addresses', addresses_path %></li>
		    			<li><%= link_to 'Orders', orders_path %></li>
		    			<li><%= link_to 'Categories', categories_path %></li>
		    			<li><%= link_to 'Products', products_path %></li>
		    			<li><%= link_to 'Users', users_path %></li>
		    		</ul>
		    		<hr>
		    		<ul>
		    			<a href="/admin/dashboard"><li>Analytics Dashboard</li></a>
		    		</ul>
		    	</div>
	    	</div>
	    	<div class="col-lg-10">
	    		<div class="main-content">
		    		<%= yield %>
	    		</div>
	    	</div>
	    </div>

		</main>

		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
		<!-- Include all compiled plugins (below), or include individual files as needed -->
		<script src="js/bootstrap.min.js"></script>

	</body>
</html>
